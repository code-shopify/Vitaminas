<div class="{{ section.settings.custom-class }} t4s-container vitatu-section py-5 text-center">
  <h2 class="section-title">+30,000 personas opinan de Vitatú</h2>
  <div class="slider-wrapper">
    <button class="nav-button prev-button">❮</button>
    <div class="slider-containerv8">
      <div class="sliderv8">
        {% for block in section.blocks %}
          <div class="slidev8">
            <div class="with-borderv8">
              <div class="video-container">
                <video class="tiktok-videov8" 
                       poster="{% if block.settings.thumbnail != blank %}{{ block.settings.thumbnail | image_url }}{% endif %}" 
                       muted playsinline>
                  <source src="{{ block.settings.video_url }}" type="video/mp4">
                  Tu navegador no soporta este formato de video.
                </video>
                <div class="play-buttonv8">▶</div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <button class="nav-button next-button">❯</button>
  </div>
</div>

{% style %}
.vitatu-section {
  background-color: #fff;
  font-family: Arial, sans-serif;
  padding: 20px 0;
}

.section-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #000;
}

.slider-wrapper {
  position: relative;
  width: 90%;
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slider-containerv8 {
  overflow: hidden;
  width: 100%;
}

.sliderv8 {
  display: flex;
  transition: transform 0.5s ease;
}

.slidev8 {
  min-width: 180px;
  max-width: 180px;
  margin: 0 5px;
  scroll-snap-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.with-borderv8 {
  border-radius: 12px;
  background: #fff;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.video-container {
  position: relative;
  width: 100%;
  height: 300px;
  overflow: hidden;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tiktok-videov8 {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 10px;
  pointer-events: auto;
  background: transparent;
}

/* Ocultar controles nativos */
.tiktok-videov8::-webkit-media-controls,
.tiktok-videov8::-moz-media-controls,
.tiktok-videov8::-ms-media-controls {
  display: none !important;
}

.play-buttonv8 {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  cursor: pointer;
  z-index: 2;
  transition: all 0.3s ease;
}

.nav-button {
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border: none;
  padding: 10px;
  cursor: pointer;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
  font-size: 18px;
  border-radius: 50%;
  transition: background 0.3s;
}

.nav-button:hover {
  background: rgba(0, 0, 0, 0.8);
}

.prev-button {
  left: -20px;
}

.next-button {
  right: -20px;
}

@media (max-width: 768px) {
  .slidev8 {
    min-width: 80%;
    max-width: 80%;
    margin: 0 auto;
  }
}
{% endstyle %}

{% javascript %}
document.addEventListener("DOMContentLoaded", () => {
  const playButtons = document.querySelectorAll('.play-buttonv8');
  const videos = document.querySelectorAll('.tiktok-videov8');

  const pauseAllVideos = (currentVideo) => {
    videos.forEach(video => {
      if (video !== currentVideo) {
        video.pause();
        video.nextElementSibling.style.display = 'flex';
      }
    });
  };

  playButtons.forEach(button => {
    button.addEventListener('click', () => {
      const video = button.previousElementSibling;

      pauseAllVideos(video);

      if (video.paused) {
        video.play();
        button.style.display = 'none';
      } else {
        video.pause();
        button.style.display = 'flex';
      }

      video.addEventListener('ended', () => {
        button.style.display = 'flex';
      });
    });
  });

  const slider = document.querySelector('.sliderv8');
  const slides = document.querySelectorAll('.slidev8');
  const prevButton = document.querySelector('.prev-button');
  const nextButton = document.querySelector('.next-button');

  let index = 0;

  const updateSlider = () => {
    const slideWidth = slides[0].offsetWidth + 10;
    slider.style.transform = `translateX(-${index * slideWidth}px)`;
  };

  prevButton.addEventListener('click', () => {
    index = (index > 0) ? index - 1 : slides.length - 1;
    updateSlider();
  });

  nextButton.addEventListener('click', () => {
    index = (index < slides.length - 1) ? index + 1 : 0;
    updateSlider();
  });
});
{% endjavascript %}

