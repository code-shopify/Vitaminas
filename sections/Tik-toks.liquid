<div class="{{ section.settings.custom-class }} t4s-container vitatu-section py-5 text-center">
  <h2 class="mb-2">{{ section.settings.heading }}</h2>
  <p class="rating">⭐ 4.5 ({{ section.settings.review_count }} reviews)</p>

  <div class="slider-wrapper">
    <button class="nav-button prev-button">❮</button>
    <div class="slider-containerv8">
      <div class="sliderv8">
        {% for block in section.blocks %}
          <div class="slidev8">
            <div class="with-borderv8">
              <div class="video-container">
                <video class="tiktok-videov8" 
                       poster="{% if block.settings.thumbnail != blank %}{{ block.settings.thumbnail | image_url }}{% endif %}">
                  <source src="{{ block.settings.video_url }}" type="video/mp4">
                  Tu navegador no soporta este formato de video.
                </video>
                <div class="play-buttonv8">▶</div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <button class="nav-button next-button">❯</button>
  </div>
</div>

{% style %}
.vitatu-section {
  background-color: #fff;
  font-family: Arial, sans-serif;
}

.vitatu-section h2 {
  font-size: 28px;
  font-weight: bold;
}

.rating {
  font-size: 14px;
  color: #555;
  margin-bottom: 20px;
}

.slider-wrapper {
  position: relative;
  max-width: 1200px;
  margin: auto;
  display: flex;
  align-items: center;
}

.slider-containerv8 {
  overflow: hidden;
  width: 100%;
}

.sliderv8 {
  display: flex;
  transition: transform 0.5s ease;
}

.slidev8 {
  min-width: 240px;
  max-width: 240px;
  margin: 0 5px;
  scroll-snap-align: center;
}

.with-borderv8 {
  padding: 4px;
  border-radius: 10px;
  background: linear-gradient(0deg, #fe2d52, #28ffff);
}

.video-container {
  position: relative;
  width: 100%;
  height: auto;
  cursor: pointer;
}

.tiktok-videov8 {
  width: 100%;
  height: auto;
  aspect-ratio: 9 / 16;
  border-radius: 10px;
  object-fit: cover;
  pointer-events: auto; /* Activa interacción directa */
}

.play-buttonv8 {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border: none;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  cursor: pointer;
  z-index: 2;
}

.nav-button {
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border: none;
  padding: 10px 15px;
  cursor: pointer;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
  font-size: 20px;
  border-radius: 50%;
}

.prev-button {
  left: -20px;
}

.next-button {
  right: -20px;
}
{% endstyle %}

{% javascript %}
document.addEventListener("DOMContentLoaded", () => {
  const playButtons = document.querySelectorAll('.play-buttonv8');
  const videos = document.querySelectorAll('.tiktok-videov8');

  // Función para pausar todos los videos excepto el actual
  const pauseAllVideos = (currentVideo) => {
    videos.forEach(video => {
      if (video !== currentVideo) {
        video.pause();
        video.nextElementSibling.style.display = 'flex'; // Muestra el botón de play
      }
    });
  };

  // Evento para el botón de Play
  playButtons.forEach(button => {
    button.addEventListener('click', () => {
      const video = button.previousElementSibling;

      pauseAllVideos(video);

      if (video.paused) {
        video.play();
        button.style.display = 'none';
      } else {
        video.pause();
        button.style.display = 'flex';
      }

      video.addEventListener('ended', () => {
        button.style.display = 'flex';
      });
    });
  });

  // Evento para pausar/reproducir al hacer clic directamente en el video
  videos.forEach(video => {
    video.addEventListener('click', () => {
      pauseAllVideos(video);

      if (video.paused) {
        video.play();
        video.nextElementSibling.style.display = 'none'; // Oculta el botón de play
      } else {
        video.pause();
        video.nextElementSibling.style.display = 'flex'; // Muestra el botón de play
      }

      video.addEventListener('ended', () => {
        video.nextElementSibling.style.display = 'flex';
      });
    });
  });

  // Carrusel
  const slider = document.querySelector('.sliderv8');
  const slides = document.querySelectorAll('.slidev8');
  const prevButton = document.querySelector('.prev-button');
  const nextButton = document.querySelector('.next-button');

  let index = 0;

  const updateSlider = () => {
    const slideWidth = slides[0].offsetWidth + 10;
    slider.style.transform = `translateX(-${index * slideWidth}px)`;
  };

  prevButton.addEventListener('click', () => {
    index = (index > 0) ? index - 1 : slides.length - 1;
    updateSlider();
  });

  nextButton.addEventListener('click', () => {
    index = (index < slides.length - 1) ? index + 1 : 0;
    updateSlider();
  });
});
{% endjavascript %}

{% schema %}
{
  "name": "Opiniones de Vitatú",
  "settings": [
    {
      "type": "text",
      "id": "custom-class",
      "label": "Clase Personalizada"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título Principal",
      "default": "+30,000 personas opinan de Vitatú"
    },
    {
      "type": "text",
      "id": "review_count",
      "label": "Cantidad de Reseñas",
      "default": "1450"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "url",
          "id": "video_url",
          "label": "URL del Video (MP4)"
        },
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Miniatura del Video"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Opiniones de Vitatú",
      "category": "Secciones Personalizadas"
    }
  ]
}
{% endschema %}
