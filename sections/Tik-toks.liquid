<div class="{{ section.settings.custom-class }} t4s-container vitatu-section py-5 text-center">
  <h2 class="mb-2">{{ section.settings.heading }}</h2>
  <p class="rating">
    ⭐⭐⭐⭐⭐ <span>{{ section.settings.review_count }} reviews</span>
  </p>

  <div class="slider-containerv8">
    <button class="nav-button prev-button">❮</button>
    <div class="sliderv8">
      {% for block in section.blocks %}
        <div class="slidev8">
          <div class="with-borderv8">
            <video class="tiktok-videov8" controls poster="{{ block.settings.thumbnail }}">
              <source src="{{ block.settings.video_url }}" type="video/mp4">
              Tu navegador no soporta este formato de video.
            </video>
          </div>
        </div>
      {% endfor %}
    </div>
    <button class="nav-button next-button">❯</button>
  </div>

  <div class="pagination-dots">
    {% for block in section.blocks %}
      <span class="dot {% if forloop.first %}active{% endif %}"></span>
    {% endfor %}
  </div>
</div>

{% style %}
.vitatu-section {
  background-color: #fff;
  font-family: Arial, sans-serif;
}

.vitatu-section h2 {
  font-size: 28px;
  font-weight: bold;
}

.rating {
  font-size: 14px;
  color: #555;
  margin-bottom: 20px;
}

.slider-containerv8 {
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  max-width: 1200px;
  margin: auto;
}

.sliderv8 {
  display: flex;
  gap: 10px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  padding: 10px;
}

.slidev8 {
  min-width: 200px;
  max-width: 240px;
  scroll-snap-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.with-borderv8 {
  padding: 4px;
  border-radius: 10px;
  background: linear-gradient(0deg, #fe2d52, #28ffff);
}

.tiktok-videov8 {
  width: 100%;
  height: auto;
  aspect-ratio: 9 / 16;
  border-radius: 10px;
}

.nav-button {
  background: #000;
  color: #fff;
  border: none;
  padding: 10px;
  cursor: pointer;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
}

.prev-button {
  left: 0;
}

.next-button {
  right: 0;
}

.pagination-dots {
  text-align: center;
  margin-top: 10px;
}

.dot {
  height: 10px;
  width: 10px;
  background-color: #bbb;
  border-radius: 50%;
  display: inline-block;
  margin: 0 5px;
  cursor: pointer;
}

.dot.active {
  background-color: #717171;
}
{% endstyle %}

{% javascript %}
document.addEventListener("DOMContentLoaded", () => {
  const slider = document.querySelector('.sliderv8');
  const dots = document.querySelectorAll('.dot');
  const prevButton = document.querySelector('.prev-button');
  const nextButton = document.querySelector('.next-button');

  let index = 0;

  const updateDots = () => {
    dots.forEach((dot, idx) => {
      dot.classList.toggle('active', idx === index);
    });
  };

  const scrollSlider = (direction) => {
    const slides = document.querySelectorAll('.slidev8');
    const slideWidth = slides[0].offsetWidth + 10;
    index = Math.max(0, Math.min(slides.length - 1, index + direction));
    slider.scrollTo({ left: index * slideWidth, behavior: 'smooth' });
    updateDots();
  };

  prevButton.addEventListener('click', () => scrollSlider(-1));
  nextButton.addEventListener('click', () => scrollSlider(1));

  dots.forEach((dot, idx) => {
    dot.addEventListener('click', () => {
      index = idx;
      scrollSlider(0);
    });
  });
});
{% endjavascript %}

{% schema %}
{
  "name": "Opiniones de Vitatú",
  "settings": [
    {
      "type": "text",
      "id": "custom-class",
      "label": "Clase Personalizada"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título Principal",
      "default": "+30,000 personas opinan de Vitatú"
    },
    {
      "type": "text",
      "id": "review_count",
      "label": "Cantidad de Reseñas",
      "default": "1450"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "url",
          "id": "video_url",
          "label": "URL del Video (MP4)"
        },
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Miniatura del Video"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Opiniones de Vitatú",
      "category": "Secciones Personalizadas"
    }
  ]
}
{% endschema %}
