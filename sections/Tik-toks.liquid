<div class="{{ section.settings.custom-class }} t4s-container vitatu-section py-5 text-center" style="background-color: {{ section.settings.background_color }};">
  {% if section.settings.section_title != blank %}
    <h2 class="section-title">{{ section.settings.section_title }}</h2>
  {% endif %}

  <div class="slider-wrapper">
    <button class="nav-button prev-button">❮</button>
    <div class="slider-containerv8">
      <div class="sliderv8">
        {% for block in section.blocks %}
          <div class="slidev8" style="flex: 0 0 calc(100% / {{ section.settings.videos_per_view }} - 10px);">
            <div class="with-borderv8">
              <div class="video-container">
                <video class="tiktok-videov8" 
                       poster="{% if block.settings.thumbnail != blank %}{{ block.settings.thumbnail | image_url }}{% endif %}" 
                       muted playsinline>
                  <source src="{{ block.settings.video_url }}" type="video/mp4">
                  Tu navegador no soporta este formato de video.
                </video>
                <div class="play-buttonv8">▶</div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <button class="nav-button next-button">❯</button>
  </div>

  <!-- Dots de Navegación -->
  <div class="dots-container"></div>
</div>

{% style %}
.vitatu-section {
  font-family: Arial, sans-serif;
  padding: 20px 0;
}

.section-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #000;
}

.slider-wrapper {
  position: relative;
  width: 90%;
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slider-containerv8 {
  overflow: hidden;
  width: 100%;
}

.sliderv8 {
  display: flex;
  transition: transform 0.5s ease;
}

.slidev8 {
  margin: 0 5px;
  scroll-snap-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.with-borderv8 {
  border-radius: 12px;
  background: #fff;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.video-container {
  position: relative;
  width: 100%;
  height: 300px;
  overflow: hidden;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tiktok-videov8 {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 10px;
  pointer-events: auto;
  background: transparent;
}

.play-buttonv8 {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  cursor: pointer;
  z-index: 2;
  transition: all 0.3s ease;
}

.nav-button {
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border: none;
  padding: 10px;
  cursor: pointer;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
  font-size: 18px;
  border-radius: 50%;
  transition: background 0.3s;
}

.nav-button:hover {
  background: rgba(0, 0, 0, 0.8);
}

.prev-button {
  left: -20px;
}

.next-button {
  right: -20px;
}

/* Estilos para los Dots */
.dots-container {
  display: flex;
  justify-content: center;
  margin-top: 10px;
}

.dot {
  height: 10px;
  width: 10px;
  margin: 0 5px;
  background-color: #bbb;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.3s ease;
  cursor: pointer;
}

.dot.active {
  background-color: #333;
}

@media (max-width: 768px) {
  .slidev8 {
    flex: 0 0 90%;
  }
}
{% endstyle %}

{% javascript %}
document.addEventListener("DOMContentLoaded", () => {
  const playButtons = document.querySelectorAll('.play-buttonv8');
  const videos = document.querySelectorAll('.tiktok-videov8');
  const slider = document.querySelector('.sliderv8');
  const slides = document.querySelectorAll('.slidev8');
  const prevButton = document.querySelector('.prev-button');
  const nextButton = document.querySelector('.next-button');
  const dotsContainer = document.querySelector('.dots-container');

  let index = 0;

  // Crear los dots dinámicamente
  slides.forEach((_, i) => {
    const dot = document.createElement('span');
    dot.classList.add('dot');
    if (i === 0) dot.classList.add('active');
    dotsContainer.appendChild(dot);

    dot.addEventListener('click', () => {
      index = i;
      updateSlider();
      updateDots();
    });
  });

  const dots = document.querySelectorAll('.dot');

  const updateSlider = () => {
    const slideWidth = slides[0].offsetWidth + 10;
    slider.style.transform = `translateX(-${index * slideWidth}px)`;
    updateDots();
  };

  const updateDots = () => {
    dots.forEach(dot => dot.classList.remove('active'));
    dots[index].classList.add('active');
  };

  prevButton.addEventListener('click', () => {
    index = (index > 0) ? index - 1 : slides.length - 1;
    updateSlider();
  });

  nextButton.addEventListener('click', () => {
    index = (index < slides.length - 1) ? index + 1 : 0;
    updateSlider();
  });

  playButtons.forEach(button => {
    button.addEventListener('click', () => {
      const video = button.previousElementSibling;
      videos.forEach(v => { if (v !== video) v.pause(); });
      video.paused ? video.play() : video.pause();
      button.style.display = video.paused ? 'flex' : 'none';
    });
  });
});
{% endjavascript %}

{% schema %}
{
  "name": "Opiniones de Vitatú",
  "settings": [
    {
      "type": "text",
      "id": "custom-class",
      "label": "Clase Personalizada"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Título de la Sección",
      "default": "+30,000 personas opinan de Vitatú"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de Fondo",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "videos_per_view",
      "label": "Videos por Vista",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "url",
          "id": "video_url",
          "label": "URL del Video (MP4)"
        },
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Miniatura del Video"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Opiniones de Vitatú",
      "category": "Secciones Personalizadas"
    }
  ]
}
{% endschema %}
