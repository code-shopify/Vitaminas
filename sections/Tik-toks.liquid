<div class="{{ section.settings.custom_class }} vitatu-tiktok-section t4s-container py-5 text-center">
  <h2 class="mb-3">{{ section.settings.heading }}</h2>
  <p class="mb-4">{{ section.settings.subheading }}</p>

  <div class="tiktok-carousel d-flex overflow-auto">
    {% for block in section.blocks %}
      <div class="tiktok-item text-center" data-video-id="{{ block.id }}">
        <!-- Miniatura del Video -->
        <div class="tiktok-cover" style="background-image: url('{{ block.settings.thumbnail | image_url }}');">
          <button class="play-button" data-video-id="{{ block.id }}">▶</button>
        </div>

        <!-- Video Oculto por Defecto -->
        <div class="tiktok-video-container" id="video-{{ block.id }}" style="display: none;">
          <iframe src="{{ block.settings.tiktok_url }}" 
                  frameborder="0" 
                  allow="autoplay; encrypted-media; fullscreen; picture-in-picture" 
                  allowfullscreen 
                  class="tiktok-embed">
          </iframe>
        </div>

        <h3 class="tiktok-caption">{{ block.settings.caption }}</h3>
      </div>
    {% endfor %}
  </div>

  <div class="carousel-controls">
    <button class="carousel-prev">❮</button>
    <button class="carousel-next">❯</button>
  </div>
</div>

{% style %}
.vitatu-tiktok-section {
  background-color: #fff;
  font-family: Arial, sans-serif;
}

.vitatu-tiktok-section h2 {
  font-size: 28px;
  font-weight: bold;
}

.vitatu-tiktok-section p {
  color: #333;
  font-size: 16px;
}

.tiktok-carousel {
  display: flex;
  gap: 1rem;
  scroll-snap-type: x mandatory;
  overflow-x: auto;
  padding: 1rem 0;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.tiktok-carousel::-webkit-scrollbar {
  display: none;
}

.tiktok-item {
  min-width: 300px;
  max-width: 320px;
  scroll-snap-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

/* Miniatura del Video */
.tiktok-cover {
  width: 100%;
  height: 500px;
  background-size: cover;
  background-position: center;
  border-radius: 10px;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

/* Botón de Play */
.play-button {
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border: none;
  border-radius: 50%;
  padding: 20px;
  font-size: 2rem;
  cursor: pointer;
  transition: background 0.3s ease;
  z-index: 10;
}

.play-button:hover {
  background: rgba(0, 0, 0, 0.8);
}

/* Video */
.tiktok-embed {
  width: 100%;
  height: 500px;
  border-radius: 10px;
  border: none;
}

.carousel-controls {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-top: 1rem;
}

.carousel-prev,
.carousel-next {
  background-color: #f3f3f3;
  border: none;
  padding: 10px 20px;
  cursor: pointer;
  font-size: 1.5rem;
  border-radius: 5px;
  transition: background 0.3s ease;
}

.carousel-prev:hover,
.carousel-next:hover {
  background-color: #e0e0e0;
}

/* Responsive */
@media (max-width: 768px) {
  .vitatu-tiktok-section h2 {
    font-size: 22px;
  }
  
  .tiktok-item {
    min-width: 250px;
  }

  .tiktok-cover, .tiktok-embed {
    height: 400px;
  }

  .play-button {
    font-size: 1.5rem;
    padding: 15px;
  }
}
{% endstyle %}

{% javascript %}
// Mostrar video al hacer clic en el botón de Play
document.addEventListener('DOMContentLoaded', function () {
  const playButtons = document.querySelectorAll('.play-button');

  playButtons.forEach(button => {
    button.addEventListener('click', function () {
      const videoId = this.getAttribute('data-video-id');
      const cover = document.querySelector(`.tiktok-item[data-video-id="${videoId}"] .tiktok-cover`);
      const videoContainer = document.getElementById(`video-${videoId}`);

      // Ocultar la miniatura y mostrar el video
      cover.style.display = 'none';
      videoContainer.style.display = 'block';
    });
  });
});
{% endjavascript %}

{% schema %}
{
  "name": "Carrusel de TikToks",
  "settings": [
    {
      "type": "text",
      "id": "custom_class",
      "label": "Clase Personalizada",
      "default": "custom-tiktok-carousel"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título Principal",
      "default": "+30,000 personas opinan de Vitatú"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "¡Descubre lo que opinan nuestros clientes!"
    }
  ],
  "blocks": [
    {
      "type": "tiktok",
      "name": "Video de TikTok",
      "settings": [
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Miniatura del Video"
        },
        {
          "type": "url",
          "id": "tiktok_url",
          "label": "URL del Video de TikTok",
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Descripción del Video",
          "default": "Opinión del Cliente"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Carrusel de TikToks",
      "category": "Secciones Personalizadas"
    }
  ]
}
{% endschema %}
