{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Calificación (Ejemplo: 4.8)",
      "default": "4.8"
    },
    {
      "type": "text",
      "id": "reviews",
      "label": "Número de reseñas",
      "default": "1,450 reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Reseñas de Vitatú"
    },
    {
      "type": "textarea",
      "id": "bottom_message",
      "label": "Mensaje inferior",
      "default": "*EL CONSUMO DE ESTE PRODUCTO ES RESPONSABILIDAD DE QUIÉN LO RECOMIENDA Y DE QUIÉN LO USA, ESTE PRODUCTO NO ES UN MEDICAMENTO*"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Configuración de Videos TikTok"
    },
    {
      "type": "url",
      "id": "video_1",
      "label": "TikTok Video 1"
    },
    {
      "type": "url",
      "id": "video_2",
      "label": "TikTok Video 2"
    },
    {
      "type": "url",
      "id": "video_3",
      "label": "TikTok Video 3"
    },
    {
      "type": "url",
      "id": "video_4",
      "label": "TikTok Video 4"
    },
    {
      "type": "url",
      "id": "video_5",
      "label": "TikTok Video 5"
    },
    {
      "type": "url",
      "id": "video_6",
      "label": "TikTok Video 6"
    },
    {
      "type": "url",
      "id": "video_7",
      "label": "TikTok Video 7"
    },
    {
      "type": "url",
      "id": "video_8",
      "label": "TikTok Video 8"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="container-fluid py-5" style="background-color: {{ section.settings.background_color }};">
  <div class="container text-center">
    
    <div class="tiktok-slider-header">
      <div class="rating-reviews d-flex align-items-center justify-content-center">
        <span class="rating-value me-2">{{ section.settings.rating }}</span>
        <div class="stars d-flex">
          {% assign rating_val = section.settings.rating | plus: 0 %}
          {% assign full_stars = rating_val | floor %}
          {% assign fraction = rating_val | minus: full_stars %}
          {% assign partial_percent = fraction | times: 100 %}
          {% assign next_star = full_stars | plus: 1 %}
          {% for star in (1..5) %}
            <span class="star {% if star <= full_stars %}full{% elsif star == next_star and fraction > 0 %}partial{% else %}empty{% endif %}" {% if star == next_star and fraction > 0 %} style="--fill: {{ partial_percent }}%;"{% endif %}>
              ★
            </span>
          {% endfor %}
        </div>
        <span class="reviews ms-2">{{ section.settings.reviews }}</span>
      </div>
      <h2 class="slider-title mt-3">{{ section.settings.title }}</h2>
    </div>

    <div class="slider-wrapper">
      <button class="slider-btn left-btn d-none d-md-block" onclick="scrollSlider(-1)">◀</button>
      <div class="slider-container">
        <div class="slider">
          {% for i in (1..8) %}
            {% capture video_var %}video_{{ i }}{% endcapture %}
            {% assign video_url = section.settings[video_var] %}
            {% if video_url contains "/video/" %}
              {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
              <div class="slide">
                <div class="video-container">
                  <iframe class="tiktok-embed"
                    src="https://www.tiktok.com/embed/{{ video_id }}?autoplay=1&mute=0"
                    frameborder="0"
                    allow="autoplay; fullscreen; picture-in-picture"
                    scrolling="no">
                  </iframe>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      <button class="slider-btn right-btn d-none d-md-block" onclick="scrollSlider(1)">▶</button>
    </div>

    <p class="bottom-message mt-4">{{ section.settings.bottom_message }}</p>
  </div>
</div>

<style>
.video-container {
  width: 100%;
  max-width: 300px;
  height: 500px;
  overflow: hidden;
  position: relative;
  border-radius: 15px;
}

.tiktok-embed {
  width: 100%;
  height: 100%;
  object-fit: contain;
  border-radius: 15px;
}

.slider-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
  background: rgba(255, 255, 255, 0.9);
  color: black;
  border: none;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  font-size: 24px;
  cursor: pointer;
}
.left-btn {
  left: 10px;
}
.right-btn {
  right: 10px;
}

.slider-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  position: relative;
}

.slider-container {
  width: 90%;
  overflow-x: auto;
  scroll-behavior: smooth;
}

.slider {
  display: flex;
  gap: 15px;
}

@media (min-width: 1025px) {
  .slide { flex: 0 0 calc(100% / 4.5); }
}
@media (max-width: 1024px) and (min-width: 768px) {
  .slide { flex: 0 0 calc(100% / 2); }
}
@media (max-width: 767px) {
  .slide { flex: 0 0 calc(100% / 2); }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
    let position = 0;
    const slides = document.querySelector(".slider");
    const slideWidth = document.querySelector(".slide").offsetWidth;

    window.scrollSlider = function(direction) {
        position += direction * slideWidth;
        slides.style.transform = `translateX(-${position}px)`;
    };
});
</script>


