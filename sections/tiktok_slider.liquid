{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FEF8F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "TikTok Video",
      "settings": [
        {
          "type": "url",
          "id": "video_url",
          "label": "TikTok Video URL",
          "info": "Pega la URL completa del video de TikTok"
        },
        {
          "type": "product",
          "id": "featured_product",
          "label": "Producto relacionado"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="tiktok-slider-container" style="background-color: {{ section.settings.background_color }};">
  <div class="tiktok-slider">
    {% for block in section.blocks %}
      <div class="tiktok-slide">
        <div class="video-container">
          {% if block.settings.video_url contains "/video/" %}
            {% assign video_id = block.settings.video_url | split: "/video/" | last | split: "?" | first %}
            <iframe class="tiktok-embed" src="https://www.tiktok.com/embed/{{ video_id }}" frameborder="0" allowfullscreen scrolling="no"></iframe>
          {% else %}
            <p style="color: red;">URL inválida. Asegúrate de ingresar un enlace correcto.</p>
          {% endif %}
        </div>

        {% if block.settings.featured_product != blank %}
        <div class="product-box">
          <a href="{{ block.settings.featured_product.url }}" class="product-link">
            <img src="{{ block.settings.featured_product.featured_image | img_url: '150x150' }}" alt="{{ block.settings.featured_product.title }}">
            <div class="product-info">
              <span class="product-title" style="color: {{ section.settings.text_color }};">{{ block.settings.featured_product.title }}</span>
              <span class="product-price">
                {{ block.settings.featured_product.price | money }}
                {% if block.settings.featured_product.compare_at_price > block.settings.featured_product.price %}
                  <span class="product-old-price">{{ block.settings.featured_product.compare_at_price | money }}</span>
                {% endif %}
              </span>
            </div>
          </a>
        </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
/* Contenedor principal */
.tiktok-slider-container {
  padding: 20px;
  border-radius: 10px;
  overflow-x: auto;
}

/* Slider con 4.5 videos visibles */
.tiktok-slider {
  display: flex;
  gap: 10px;
  overflow-x: scroll;
  scroll-snap-type: x mandatory;
  max-width: 1200px;
  margin: auto;
  padding: 10px;
}

/* Slides */
.tiktok-slide {
  flex: 0 0 calc(100% / 4.5);
  max-width: calc(100% / 4.5);
  scroll-snap-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Videos */
.tiktok-embed {
  width: 100%;
  aspect-ratio: 9 / 16;
  border-radius: 10px;
  display: block;
}

/* Estilos del Producto */
.product-box {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 200px;
  margin-top: 10px;
  text-align: left;
}

.product-link {
  display: flex;
  align-items: center;
  text-decoration: none;
  color: #333;
  flex-grow: 1;
}

.product-link img {
  width: 50px;
  height: 50px;
  border-radius: 5px;
  margin-right: 10px;
}

.product-info {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.product-title {
  font-size: 12px;
  color: #333;
  line-height: 1.2;
}

.product-price {
  font-size: 12px;
  font-weight: bold;
  color: #f05454;
}

.product-old-price {
  font-size: 12px;
  text-decoration: line-through;
  color: #888;
  margin-left: 5px;
}

/* Scrollbar */
.tiktok-slider::-webkit-scrollbar {
  height: 8px;
}

.tiktok-slider::-webkit-scrollbar-thumb {
  background: #aaa;
  border-radius: 10px;
}

.tiktok-slider::-webkit-scrollbar-track {
  background: #ddd;
}
</style>

