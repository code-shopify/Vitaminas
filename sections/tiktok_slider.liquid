{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Calificaci√≥n (Ejemplo: 4.8)",
      "default": "4.8"
    },
    {
      "type": "text",
      "id": "reviews",
      "label": "N√∫mero de rese√±as",
      "default": "1,450 reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "T√≠tulo principal",
      "default": "Opiniones de Vitaminas"
    },
    {
      "type": "textarea",
      "id": "bottom_message",
      "label": "Mensaje inferior",
      "default": "*EL CONSUMO DE ESTE PRODUCTO ES RESPONSABILIDAD DE QUI√âN LO RECOMIENDA Y DE QUI√âN LO USA, ESTE PRODUCTO NO ES UN MEDICAMENTO*"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FEF8F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="container-fluid py-5" style="background-color: {{ section.settings.background_color }};">
  <div class="container text-center">
    
    <!-- ‚≠ê Estrellas y t√≠tulo -->
    <div class="tiktok-slider-header">
      <div class="rating-reviews d-flex justify-content-center align-items-center">
        <div class="star-rating d-flex align-items-center">
          <div class="stars d-flex">
            {% assign rating_val = section.settings.rating | plus: 0 %}
            {% assign full_stars = rating_val | floor %}
            {% assign fraction = rating_val | minus: full_stars %}
            {% assign partial_percent = fraction | times: 100 %}
            {% assign next_star = full_stars | plus: 1 %}
            {% for star in (1..5) %}
              <span class="star {% if star <= full_stars %}full{% elsif star == next_star and fraction > 0 %}partial{% else %}empty{% endif %}" style="width: {{ partial_percent }}%">
                ‚òÖ
              </span>
            {% endfor %}
          </div>
          <span class="rating-value ms-2">{{ rating_val }}</span>
        </div>
        <span class="reviews ms-2">{{ section.settings.reviews }}</span>
      </div>
      <h2 class="slider-title mt-3">{{ section.settings.title }}</h2>
    </div>

    <!-- üé• Slider -->
    <div class="slider-wrapper">
      <button class="slider-btn left-btn" onclick="scrollSlider(-1)">‚óÄ</button>
      <div class="slider-container">
        <div class="slider">
          {% for i in (1..8) %}
            {% capture video_var %}video_{{ i }}{% endcapture %}
            {% assign video_url = section.settings[video_var] %}
            {% if video_url contains "/video/" %}
              {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
              <div class="slide">
                <div class="video-container">
                  <iframe class="tiktok-embed"
                    src="https://www.tiktok.com/embed/{{ video_id }}?autoplay=1&mute=0"
                    frameborder="0"
                    allow="autoplay; fullscreen; picture-in-picture"
                    scrolling="no">
                  </iframe>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      <button class="slider-btn right-btn" onclick="scrollSlider(1)">‚ñ∂</button>
    </div>

    <!-- üì¢ Mensaje inferior -->
    <p class="bottom-message mt-4">{{ section.settings.bottom_message }}</p>

  </div>
</div>

<style>
/* üåü Estilos del slider */
.slider-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.slider-container {
  width: 100%;
  overflow: hidden;
}

.slider {
  display: flex;
  transition: transform 0.5s ease;
}

/* üì± Tama√±o y ajuste de los videos */
.slide {
  flex: 0 0 auto;
  width: 250px;
  margin: 0 10px;
}

.video-container {
  position: relative;
  width: 100%;
  padding-top: 177.77%;
  border-radius: 15px;
  overflow: hidden;
  background: #000;
}

.video-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 15px;
}

/* üéõÔ∏è Botones de navegaci√≥n */
.slider-btn {
  background: rgba(255, 255, 255, 0.9);
  color: black;
  border: none;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  font-size: 24px;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  transition: 0.3s;
  opacity: 1;
  z-index: 10;
}

.left-btn {
  left: 10px;
}

.right-btn {
  right: 10px;
}

.slider-btn:hover {
  background: rgba(255, 255, 255, 1);
}

/* ‚≠ê Estilos de estrellas */
.star-rating {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
}

.stars {
  display: flex;
  flex-direction: row;
  gap: 2px;
}

.star {
  font-size: 20px;
  display: inline-block;
  position: relative;
  color: #ccc;
}

.star.full {
  color: gold;
}

.star.partial {
  color: transparent;
  background: linear-gradient(to right, gold var(--fill, 50%), #ccc var(--fill, 50%));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
    let position = 0;
    const slides = document.querySelector(".slider");
    const slideWidth = 270;
    const maxPosition = slideWidth * (slides.children.length - 5);
  
    window.scrollSlider = function(direction) {
        position += direction * slideWidth;
        position = Math.max(0, Math.min(position, maxPosition));
        slides.style.transform = `translateX(-${position}px)`;
    };
});
</script>



