{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Calificación (Ejemplo: 4.8)",
      "default": "4.8"
    },
    {
      "type": "text",
      "id": "reviews",
      "label": "Número de reseñas",
      "default": "1,450 reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Opinan de Vitatú"
    },
    {
      "type": "textarea",
      "id": "bottom_message",
      "label": "Mensaje inferior",
      "default": "*EL CONSUMO DE ESTE PRODUCTO ES RESPONSABILIDAD DE QUIÉN LO RECOMIENDA Y DE QUIÉN LO USA, ESTE PRODUCTO NO ES UN MEDICAMENTO*"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FEF8F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "url",
      "id": "video_1",
      "label": "TikTok Video 1"
    },
    {
      "type": "url",
      "id": "video_2",
      "label": "TikTok Video 2"
    },
    {
      "type": "url",
      "id": "video_3",
      "label": "TikTok Video 3"
    },
    {
      "type": "url",
      "id": "video_4",
      "label": "TikTok Video 4"
    },
    {
      "type": "url",
      "id": "video_5",
      "label": "TikTok Video 5"
    },
    {
      "type": "url",
      "id": "video_6",
      "label": "TikTok Video 6"
    },
    {
      "type": "url",
      "id": "video_7",
      "label": "TikTok Video 7"
    },
    {
      "type": "url",
      "id": "video_8",
      "label": "TikTok Video 8"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="tiktok-slider-container" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  
  <!-- Sección Superior -->
  <div class="tiktok-slider-header">
    <!-- Calificación y Reseñas -->
    <div class="rating-reviews">
      <div class="star-rating">
        <div class="stars">
          {% assign rating_val = section.settings.rating | plus: 0 %}
          {% assign full_stars = rating_val | floor %}
          {% assign fraction = rating_val | minus: full_stars %}
          {% assign partial_percent = fraction | times: 100 %}
          {% assign next_star = full_stars | plus: 1 %}
          {% for star in (1..5) %}
            {% if star <= full_stars %}
              <span class="star full">&#9733;</span>
            {% elsif star == next_star %}
              {% if fraction > 0 %}
                <span class="star partial" style="--fill: {{ partial_percent }}%;">&#9733;</span>
              {% else %}
                <span class="star empty">&#9733;</span>
              {% endif %}
            {% else %}
              <span class="star empty">&#9733;</span>
            {% endif %}
          {% endfor %}
        </div>
        <span class="rating-value">{{ rating_val }}</span>
      </div>
      <span class="reviews">{{ section.settings.reviews }}</span>
    </div>
    
    <h2 class="slider-title">{{ section.settings.title }}</h2>
  </div>

  <!-- Botón Izquierdo -->
  <button class="nav-button left-button" onclick="scrollSlider(-1)">&#10094;</button>

  <!-- Carrusel de TikToks -->
  <div class="tiktok-carousel">
    <div class="tiktok-slider">
      {% for i in (1..8) %}
        {% capture video_var %}video_{{ i }}{% endcapture %}
        {% assign video_url = section.settings[video_var] %}
        {% if video_url contains "/video/" %}
          {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
          <div class="tiktok-slide">
            <div class="with-border video-container">
              <iframe class="tiktok-embed video-{{ i }}"
                src="https://www.tiktok.com/embed/{{ video_id }}?embedId=1&autoplay=0&muted=0"
                frameborder="0"
                allow="autoplay; fullscreen; picture-in-picture"
                scrolling="no"
                data-video>
              </iframe>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <!-- Botón Derecho -->
  <button class="nav-button right-button" onclick="scrollSlider(1)">&#10095;</button>

  <!-- Mensaje Inferior -->
  <p class="bottom-message">{{ section.settings.bottom_message }}</p>

</div>

{% style %}
  /* Contenedor principal */
.tiktok-slider-container {
  text-align: center;
  padding: 60px 20px;
  border-radius: 10px;
  position: relative;
 
  margin: 0 auto;
}

/* Carrusel: permite desplazamiento horizontal */
.tiktok-carousel {
  width: 160rem; /* Reducimos el ancho total */
  overflow-x: auto;
  scroll-behavior: smooth;
  -ms-overflow-style: none; /* IE y Edge */
  scrollbar-width: none; /* Firefox */
  display: flex;
  justify-content: center; /* Mantiene el contenido alineado */
  margin: auto; /* Centra el carrusel */
  padding: 10px 0; /* Añadimos un pequeño espacio arriba y abajo */
}

.tiktok-carousel::-webkit-scrollbar {
  display: none;
}

/* Contenedor de slides */
.tiktok-slider {
  display: flex;
  gap: 8px;
  justify-content: center; /* Mantiene los videos alineados */
}

/* Ajuste de cada slide */
.tiktok-slide {
  flex: 0 0 calc(100% / 6); /* Reducimos el tamaño */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* Ajuste del iframe de TikTok */
.tiktok-embed {
  width: 28rem; /* Reducimos el tamaño en escritorio */
  height: 100%;
  border-radius: 15px;
  aspect-ratio: 9 / 16;
  object-fit: cover;
}

/* Estrellas */
.star {
  font-size: 16px;
  line-height: 1;
}

.star.full {
  color: gold;
}

.star.empty {
  color: #ccc;
}

.star.partial {
  position: relative;
  display: inline-block;
  color: #ccc;
}
.star.partial::before {
  content: "★";
  position: absolute;
  top: 0;
  left: 0;
  width: var(--fill);
  overflow: hidden;
  color: gold;
}

/* Botones de navegación */
.nav-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  font-size: 20px;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
.left-button {
  left: 10px;
}
.right-button {
  right: 10px;
}

/* Ajustes Responsivos */
@media (max-width: 1024px) {
  .tiktok-slide {
    flex: 0 0 calc(90% / 3); /* En tabletas mostramos 3 videos */
    max-width: calc(90% / 3);
  }
  .tiktok-embed {
    width: 20rem; /* Reducimos más el tamaño */
  }
}

@media (max-width: 768px) {
  .tiktok-slide {
    flex: 0 0 calc(90% / 2.5); /* En móviles mostramos 2.5 videos */
    max-width: calc(90% / 2.5);
  }
  .tiktok-embed {
    width: 15rem; /* Reducimos tamaño en móviles */
  }
  .nav-button {
    display: none; /* Ocultamos los botones en móviles */
  }
}
{% endstyle %}

<script>
class VideoController {
    constructor() {
        if (VideoController.instance) {
            return VideoController.instance;
        }
        VideoController.instance = this;
        this.currentPlaying = null;
        this.inicializarEventos();
    }

    inicializarEventos() {
        const videoContainers = document.querySelectorAll(".video-container");
        videoContainers.forEach((container) => {
            container.addEventListener("click", (e) => {
                e.preventDefault();
                this.manejarReproduccion(container);
            });
        });
    }

    manejarReproduccion(container) {
        const iframe = container.querySelector(".tiktok-embed");
        
        // Si hay un video reproduciéndose, lo pausamos
        if (this.currentPlaying && this.currentPlaying !== iframe) {
            const prevSrc = this.currentPlaying.getAttribute("src");
            this.currentPlaying.setAttribute("src", prevSrc.replace("autoplay=1", "autoplay=0"));
        }

        // Reproducimos el nuevo video
        if (iframe.getAttribute("src").indexOf("autoplay=1") === -1) {
            iframe.setAttribute("src", iframe.getAttribute("src").replace("autoplay=0", "autoplay=1"));
            this.currentPlaying = iframe; // Actualizamos la referencia al video actual
        } else {
            // Si el video ya se está reproduciendo, lo pausamos
            const prevSrc = iframe.getAttribute("src");
            iframe.setAttribute("src", prevSrc.replace("autoplay=1", "autoplay=0"));
            this.currentPlaying = null; // Reseteamos la referencia
        }
    }
}

document.addEventListener("DOMContentLoaded", function () {
    // Inicializamos el controlador de video
    const videoController = new VideoController();

    // Función para el scroll del slider
    window.scrollSlider = function(direction) {
        const container = document.querySelector(".tiktok-carousel");
        const slide = container.querySelector(".tiktok-slide");
        if (slide) {
            const slideWidth = slide.offsetWidth + 8;
            container.scrollBy({ left: slideWidth * direction, behavior: "smooth" });
        }
    };
});
</script>


