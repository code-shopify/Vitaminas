{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Calificación (Ejemplo: 4.8)",
      "default": "4.8"
    },
    {
      "type": "text",
      "id": "reviews",
      "label": "Número de reseñas",
      "default": "1,450 reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Opiniones de Vitaminas"
    },
    {
      "type": "textarea",
      "id": "bottom_message",
      "label": "Mensaje inferior",
      "default": "*EL CONSUMO DE ESTE PRODUCTO ES RESPONSABILIDAD DE QUIÉN LO RECOMIENDA Y DE QUIÉN LO USA, ESTE PRODUCTO NO ES UN MEDICAMENTO*"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FEF8F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "url",
      "id": "video_1",
      "label": "TikTok Video 1"
    },
    {
      "type": "url",
      "id": "video_2",
      "label": "TikTok Video 2"
    },
    {
      "type": "url",
      "id": "video_3",
      "label": "TikTok Video 3"
    },
    {
      "type": "url",
      "id": "video_4",
      "label": "TikTok Video 4"
    },
    {
      "type": "url",
      "id": "video_5",
      "label": "TikTok Video 5"
    },
    {
      "type": "url",
      "id": "video_6",
      "label": "TikTok Video 6"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="tiktok-slider-wrapper" style="background-color: {{ section.settings.background_color }};">
  <div class="tiktok-slider-container">
    
    <!-- Sección de estrellas y título -->
    <div class="tiktok-slider-header">
      <div class="rating-reviews">
        <div class="star-rating">
          <div class="stars">
            {% assign rating_val = section.settings.rating | plus: 0 %}
            {% assign full_stars = rating_val | floor %}
            {% assign fraction = rating_val | minus: full_stars %}
            {% assign partial_percent = fraction | times: 100 %}
            {% assign next_star = full_stars | plus: 1 %}
            {% for star in (1..5) %}
              {% if star <= full_stars %}
                <span class="star full">&#9733;</span>
              {% elsif star == next_star and fraction > 0 %}
                <span class="star partial" style="--fill: {{ partial_percent }}%;">&#9733;</span>
              {% else %}
                <span class="star empty">&#9733;</span>
              {% endif %}
            {% endfor %}
          </div>
          <span class="rating-value">{{ rating_val }}</span>
        </div>
        <span class="reviews">{{ section.settings.reviews }}</span>
      </div>
      <h2 class="slider-title">{{ section.settings.title }}</h2>
    </div>

    <!-- Carrusel de TikTok -->
    <div class="tiktok-carousel">
      <div class="tiktok-slider">
        {% for i in (1..6) %}
          {% capture video_var %}video_{{ i }}{% endcapture %}
          {% assign video_url = section.settings[video_var] %}
          {% if video_url contains "/video/" %}
            {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
            <div class="tiktok-slide">
              <div class="video-container">
                <iframe class="tiktok-embed"
                  src="https://www.tiktok.com/embed/{{ video_id }}"
                  frameborder="0"
                  allow="autoplay; fullscreen; picture-in-picture"
                  scrolling="no">
                </iframe>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <!-- Mensaje inferior -->
    <p class="bottom-message">{{ section.settings.bottom_message }}</p>

  </div>
</div>

{% style %}
  /* Extender el contenedor al 100% */
.tiktok-slider-wrapper {
  width: 100vw;
  padding: 50px 0;
}

/* Contenedor interno */
.tiktok-slider-container {
  max-width: 1200px;
  margin: 0 auto;
  text-align: center;
}

/* Asegurar que el carrusel es visible */
.tiktok-carousel {
  display: flex;
  overflow-x: auto;
  justify-content: center;
  gap: 20px;
  padding: 20px 0;
  scroll-behavior: smooth;
}

/* Ajustar tamaño de los videos */
.tiktok-slide {
  flex: 0 0 auto;
  width: 18%;
  max-width: 220px;
}

/* Mantener aspecto 9:16 */
.video-container {
  position: relative;
  width: 100%;
  padding-top: 177.77%;
}

.video-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* Ajustar tamaño en pantallas grandes */
@media (min-width: 1600px) {
  .tiktok-slide {
    width: 15%;
  }
}

/* Ajuste para tabletas */
@media (max-width: 1024px) {
  .tiktok-slide {
    width: 30%;
  }
}

/* Ajuste para móviles */
@media (max-width: 767px) {
  .tiktok-slide {
    width: 60%;
  }
}

/* Espaciado entre slider y texto */
.bottom-message {
  margin-top: 50px;
  font-size: 14px;
  color: #666;
  padding-bottom: 30px;
}
{% endstyle %}

{% javascript %}
  document.addEventListener("DOMContentLoaded", function () {
    class VideoController {
        constructor() {
            if (VideoController.instance) {
                return VideoController.instance;
            }
            VideoController.instance = this;
            this.currentPlaying = null;
            this.inicializarEventos();
        }

        inicializarEventos() {
            const videoContainers = document.querySelectorAll(".video-container");
            videoContainers.forEach((container) => {
                container.addEventListener("click", (e) => {
                    e.preventDefault();
                    this.manejarReproduccion(container);
                });
            });
        }

        manejarReproduccion(container) {
            const iframe = container.querySelector(".tiktok-embed");

            // Si hay un video reproduciéndose, lo pausamos
            if (this.currentPlaying && this.currentPlaying !== iframe) {
                const prevSrc = this.currentPlaying.getAttribute("src");
                this.currentPlaying.setAttribute("src", prevSrc.replace("autoplay=1", "autoplay=0"));
            }

            // Reproducimos el nuevo video
            if (iframe.getAttribute("src").indexOf("autoplay=1") === -1) {
                iframe.setAttribute("src", iframe.getAttribute("src").replace("autoplay=0", "autoplay=1"));
                this.currentPlaying = iframe; // Actualizamos la referencia al video actual
            } else {
                // Si el video ya se está reproduciendo, lo pausamos
                const prevSrc = iframe.getAttribute("src");
                iframe.setAttribute("src", prevSrc.replace("autoplay=1", "autoplay=0"));
                this.currentPlaying = null; // Reseteamos la referencia
            }
        }
    }

    // Inicializamos el controlador de video
    new VideoController();

    // Función para hacer scroll del slider de TikToks
    function scrollSlider(direction) {
        const container = document.querySelector(".tiktok-carousel");
        if (container) {
            const slide = container.querySelector(".tiktok-slide");
            if (slide) {
                const slideWidth = slide.offsetWidth + 10; // Se ajusta con margen
                container.scrollBy({ left: slideWidth * direction, behavior: "smooth" });
            }
        }
    }

    // Añadir eventos a los botones de navegación
    const leftButton = document.querySelector(".nav-button.left-button");
    const rightButton = document.querySelector(".nav-button.right-button");

    if (leftButton && rightButton) {
        leftButton.addEventListener("click", () => scrollSlider(-1));
        rightButton.addEventListener("click", () => scrollSlider(1));
    }
});

{% endjavascript %}