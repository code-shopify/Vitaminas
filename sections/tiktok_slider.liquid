{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Calificación (Ejemplo: 4.8)",
      "default": "4.8"
    },
    {
      "type": "text",
      "id": "reviews",
      "label": "Número de reseñas",
      "default": "1,450 reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Opinan de Vitatú"
    },
    {
      "type": "textarea",
      "id": "bottom_message",
      "label": "Mensaje inferior",
      "default": "*EL CONSUMO DE ESTE PRODUCTO ES RESPONSABILIDAD DE QUIÉN LO RECOMIENDA Y DE QUIÉN LO USA, ESTE PRODUCTO NO ES UN MEDICAMENTO*"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FEF8F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "url",
      "id": "video_1",
      "label": "TikTok Video 1"
    },
    {
      "type": "url",
      "id": "video_2",
      "label": "TikTok Video 2"
    },
    {
      "type": "url",
      "id": "video_3",
      "label": "TikTok Video 3"
    },
    {
      "type": "url",
      "id": "video_4",
      "label": "TikTok Video 4"
    },
    {
      "type": "url",
      "id": "video_5",
      "label": "TikTok Video 5"
    },
    {
      "type": "url",
      "id": "video_6",
      "label": "TikTok Video 6"
    },
    {
      "type": "url",
      "id": "video_7",
      "label": "TikTok Video 7"
    },
    {
      "type": "url",
      "id": "video_8",
      "label": "TikTok Video 8"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="tiktok-slider-container" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  
  <!-- Sección Superior -->
  <div class="tiktok-slider-header">
    <!-- Calificación y Reseñas -->
    <div class="rating-reviews">
      <div class="star-rating">
        <!-- Estrellas dinámicas según la calificación -->
        <div class="stars">
          {% assign rating_val = section.settings.rating | plus: 0 %}
          {% assign full_stars = rating_val | floor %}
          {% assign fraction = rating_val | minus: full_stars %}
          {% assign partial_percent = fraction | times: 100 %}
          {% assign next_star = full_stars | plus: 1 %}

          {% for star in (1..5) %}
            {% if star <= full_stars %}
              <!-- Estrella completa -->
              <span class="star full">&#9733;</span>
            {% elsif star == next_star and fraction > 0 %}
              <!-- Estrella parcial (si el rating tiene parte decimal) -->
              <span class="star partial" style="--fill: {{ partial_percent }}%;">
                &#9733;
              </span>
            {% else %}
              <!-- Estrella vacía -->
              <span class="star empty">&#9733;</span>
            {% endif %}
          {% endfor %}
        </div>
        <!-- Valor numérico de la calificación -->
        <span class="rating-value">{{ rating_val }}</span>
      </div>
      <!-- Número de reseñas -->
      <span class="reviews">{{ section.settings.reviews }}</span>
    </div>
    
    <!-- Título principal -->
    <h2 class="slider-title">{{ section.settings.title }}</h2>
  </div>

  <!-- Botón Izquierdo -->
  <button class="nav-button left-button" onclick="scrollSlider(-1)">&#10094;</button>

  <!-- Carrusel de TikToks -->
  <div class="tiktok-carousel">
    <div class="tiktok-slider">
      {% for i in (1..8) %}
        {% capture video_var %}video_{{ i }}{% endcapture %}
        {% assign video_url = section.settings[video_var] %}
        {% if video_url contains "/video/" %}
          {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
          <div class="tiktok-slide">
            <div class="with-border video-container">
              <iframe class="tiktok-embed video-{{ i }}"
                src="https://www.tiktok.com/embed/{{ video_id }}?embedId=1&autoplay=0&muted=0"
                frameborder="0"
                allow="autoplay; fullscreen; picture-in-picture"
                scrolling="no"
                data-video>
              </iframe>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <!-- Botón Derecho -->
  <button class="nav-button right-button" onclick="scrollSlider(1)">&#10095;</button>

  <!-- Mensaje Inferior -->
  <p class="bottom-message">{{ section.settings.bottom_message }}</p>

</div>

<style>
/* Contenedor principal */
.tiktok-slider-container {
  text-align: center;
  padding: 60px 20px; /* Mayor espacio vertical */
  border-radius: 10px;
  position: relative;
  max-width: 1200px; /* Para no estirar demasiado */
  margin: 0 auto;    /* Centrado horizontal */
}

/* Sección superior (rating + título) */
.tiktok-slider-header {
  margin-bottom: 40px;
}

/* Calificación y reseñas en la misma línea */
.rating-reviews {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  font-size: 14px;
  margin-bottom: 10px;
}

/* Agrupa estrellas y número (4.8) */
.star-rating {
  display: flex;
  align-items: center;
  gap: 8px;
}

/* Contenedor de las estrellas */
.stars {
  display: flex;
  gap: 2px;
}

/* Texto de la calificación */
.rating-value {
  font-weight: bold;
  color: #333;
}

/* Texto de reseñas */
.reviews {
  color: #999;
}

/* Título principal */
.slider-title {
  font-size: 32px;
  font-weight: 700;
  margin: 0;
}

/* Carrusel */
.tiktok-carousel {
  overflow: hidden;
  position: relative;
  width: 100%;
}

.tiktok-slider {
  display: flex;
  gap: 8px;
  transition: transform 0.3s ease-in-out;
}

/* Botones de navegación */
.nav-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  font-size: 20px;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.left-button {
  left: 10px;
}

.right-button {
  right: 10px;
}

/* Slides */
.tiktok-slide {
  flex: 0 0 calc(100% / 4.5);
  max-width: calc(100% / 4.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

/* Marco con borde degradado */
.with-border {
  padding: 2px;
  border-radius: 6px;
  border: 2px solid transparent;
  background: linear-gradient(to bottom, #00ffff, #ff2d55);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

/* Ajuste del TikTok al cuadro */
.tiktok-embed {
  width: 100%;
  height: 100%;
  border-radius: 12px;
  aspect-ratio: 9 / 16;
  object-fit: cover;
}

/* Estrellas */
.star {
  font-size: 16px;
  line-height: 1;
}

/* Estrella completa */
.star.full {
  color: gold;
}

/* Estrella vacía */
.star.empty {
  color: #ccc;
}

/* Estrella parcial (relleno dinámico) */
.star.partial {
  position: relative;
  display: inline-block;
  color: #ccc; /* color base (vacío) */
}
.star.partial::before {
  content: "★";
  position: absolute;
  left: 0;
  top: 0;
  width: calc(var(--fill) * 1%);
  overflow: hidden;
  color: gold;
}

/* Mensaje inferior */
.bottom-message {
  margin-top: 40px;
  font-size: 14px;
  color: #666;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const slider = document.querySelector(".tiktok-slider");
  const scrollAmount = slider.offsetWidth / 4.5;
  
  // Función de scroll accesible globalmente
  window.scrollSlider = function(direction) {
    slider.scrollBy({ left: scrollAmount * direction, behavior: "smooth" });
  };

  const videoContainers = document.querySelectorAll(".video-container");
  let currentPlaying = null;
  
  videoContainers.forEach((container) => {
    container.addEventListener("click", function(e) {
      e.preventDefault();
      
      const iframe = container.querySelector(".tiktok-embed");
      
      // Si hay otro video reproduciéndose, reiniciarlo para pausarlo
      if (currentPlaying && currentPlaying !== iframe) {
        let prevSrc = currentPlaying.getAttribute("src");
        currentPlaying.setAttribute("src", prevSrc.replace("autoplay=1", "autoplay=0"));
      }
      
      // Activar autoplay en el iframe clicado si aún no lo tiene
      if (iframe.getAttribute("src").indexOf("autoplay=1") === -1) {
        iframe.setAttribute("src", iframe.getAttribute("src").replace("autoplay=0", "autoplay=1"));
      }
      
      currentPlaying = iframe;
    });
  });
});
</script>



