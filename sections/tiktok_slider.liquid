<!-- ⭐ Estrellas y título -->
<div class="tiktok-slider-header">
  <div class="rating-reviews d-flex justify-content-center align-items-center">
    <div class="star-rating d-flex align-items-center">
      <div class="stars d-flex">
        {% assign rating_val = section.settings.rating | plus: 0 %}
        {% assign full_stars = rating_val | floor %}
        {% assign fraction = rating_val | minus: full_stars %}
        {% assign partial_percent = fraction | times: 100 %}
        {% assign next_star = full_stars | plus: 1 %}
        {% for star in (1..5) %}
          <span class="star 
            {% if star <= full_stars %}full{% elsif star == next_star and fraction > 0 %}partial{% else %}empty{% endif %}" 
            {% if star == next_star and fraction > 0 %} style="--fill: {{ partial_percent }}%;"{% endif %}>
            ★
          </span>
        {% endfor %}
      </div>
      <span class="rating-value ms-2">{{ rating_val }}</span>
    </div>
    <span class="reviews ms-2">{{ section.settings.reviews }}</span>
  </div>
  <h2 class="slider-title mt-3">{{ section.settings.title }}</h2>
</div>

