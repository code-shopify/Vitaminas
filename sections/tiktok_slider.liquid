{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Calificación (Ejemplo: 4.8)",
      "default": "4.8"
    },
    {
      "type": "text",
      "id": "reviews",
      "label": "Número de reseñas",
      "default": "1,450 reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Opiniones de Vitaminas"
    },
    {
      "type": "textarea",
      "id": "bottom_message",
      "label": "Mensaje inferior",
      "default": "*EL CONSUMO DE ESTE PRODUCTO ES RESPONSABILIDAD DE QUIÉN LO RECOMIENDA Y DE QUIÉN LO USA, ESTE PRODUCTO NO ES UN MEDICAMENTO*"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FEF8F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "url",
      "id": "video_1",
      "label": "TikTok Video 1"
    },
    {
      "type": "url",
      "id": "video_2",
      "label": "TikTok Video 2"
    },
    {
      "type": "url",
      "id": "video_3",
      "label": "TikTok Video 3"
    },
    {
      "type": "url",
      "id": "video_4",
      "label": "TikTok Video 4"
    },
    {
      "type": "url",
      "id": "video_5",
      "label": "TikTok Video 5"
    },
    {
      "type": "url",
      "id": "video_6",
      "label": "TikTok Video 6"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="container-fluid tiktok-slider-wrapper" style="background-color: {{ section.settings.background_color }};">
  <div class="container text-center py-5">
    
    <!-- Sección de estrellas y título -->
    <div class="tiktok-slider-header">
      <div class="rating-reviews d-flex justify-content-center align-items-center">
        <div class="star-rating">
          <div class="stars">
            {% assign rating_val = section.settings.rating | plus: 0 %}
            {% assign full_stars = rating_val | floor %}
            {% assign fraction = rating_val | minus: full_stars %}
            {% assign partial_percent = fraction | times: 100 %}
            {% assign next_star = full_stars | plus: 1 %}
            {% for star in (1..5) %}
              {% if star <= full_stars %}
                <span class="star full">&#9733;</span>
              {% elsif star == next_star and fraction > 0 %}
                <span class="star partial" style="--fill: {{ partial_percent }}%;">&#9733;</span>
              {% else %}
                <span class="star empty">&#9733;</span>
              {% endif %}
            {% endfor %}
          </div>
          <span class="rating-value ms-2">{{ rating_val }}</span>
        </div>
        <span class="reviews ms-2">{{ section.settings.reviews }}</span>
      </div>
      <h2 class="slider-title mt-3">{{ section.settings.title }}</h2>
    </div>

    <!-- Carrusel de TikTok -->
    <div class="row justify-content-center mt-4">
      <div class="col-12">
        <div class="d-flex overflow-auto tiktok-carousel">
          {% for i in (1..6) %}
            {% capture video_var %}video_{{ i }}{% endcapture %}
            {% assign video_url = section.settings[video_var] %}
            {% if video_url contains "/video/" %}
              {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
              <div class="tiktok-slide mx-2">
                <div class="video-container">
                  <iframe class="tiktok-embed"
                    src="https://www.tiktok.com/embed/{{ video_id }}"
                    frameborder="0"
                    allow="autoplay; fullscreen; picture-in-picture"
                    scrolling="no">
                  </iframe>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- Mensaje inferior -->
    <p class="bottom-message mt-4">{{ section.settings.bottom_message }}</p>

  </div>
</div>

<style>
/* Estrellas */
.star {
  font-size: 20px;
}

.star.full {
  color: gold;
}

.star.empty {
  color: #ccc;
}

.star.partial {
  position: relative;
  display: inline-block;
  color: #ccc;
}

.star.partial::before {
  content: "★";
  position: absolute;
  top: 0;
  left: 0;
  width: var(--fill);
  overflow: hidden;
  color: gold;
}

/* Ajustes del slider */
.tiktok-carousel {
  scroll-behavior: smooth;
  white-space: nowrap;
  display: flex;
  gap: 15px;
  padding-bottom: 10px;
}

.tiktok-slide {
  flex: 0 0 auto;
  width: 200px;
}

/* Ajustar videos */
.video-container {
  position: relative;
  width: 100%;
  padding-top: 177.77%;
}

.video-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* Mensaje inferior */
.bottom-message {
  font-size: 14px;
  color: #666;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
    class VideoController {
        constructor() {
            if (VideoController.instance) {
                return VideoController.instance;
            }
            VideoController.instance = this;
            this.currentPlaying = null;
            this.inicializarEventos();
        }

        inicializarEventos() {
            const videoContainers = document.querySelectorAll(".video-container");
            videoContainers.forEach((container) => {
                container.addEventListener("click", (e) => {
                    e.preventDefault();
                    this.manejarReproduccion(container);
                });
            });
        }

        manejarReproduccion(container) {
            const iframe = container.querySelector(".tiktok-embed");
            if (this.currentPlaying && this.currentPlaying !== iframe) {
                const prevSrc = this.currentPlaying.getAttribute("src");
                this.currentPlaying.setAttribute("src", prevSrc.replace("autoplay=1", "autoplay=0"));
            }
            iframe.setAttribute("src", iframe.getAttribute("src").replace("autoplay=0", "autoplay=1"));
            this.currentPlaying = iframe;
        }
    }

    new VideoController();
});
</script>
