{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FEF8F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "url",
      "id": "video_1",
      "label": "TikTok Video 1"
    },
    {
      "type": "product",
      "id": "product_1",
      "label": "Producto para Video 1"
    },
    {
      "type": "url",
      "id": "video_2",
      "label": "TikTok Video 2"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Producto para Video 2"
    },
    {
      "type": "url",
      "id": "video_3",
      "label": "TikTok Video 3"
    },
    {
      "type": "product",
      "id": "product_3",
      "label": "Producto para Video 3"
    },
    {
      "type": "url",
      "id": "video_4",
      "label": "TikTok Video 4"
    },
    {
      "type": "product",
      "id": "product_4",
      "label": "Producto para Video 4"
    },
    {
      "type": "url",
      "id": "video_5",
      "label": "TikTok Video 5"
    },
    {
      "type": "product",
      "id": "product_5",
      "label": "Producto para Video 5"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="tiktok-slider-container" style="background-color: {{ section.settings.background_color }};">
  <div class="tiktok-slider">
    {% for i in (1..5) %}
      {% capture video_var %}video_{{ i }}{% endcapture %}
      {% capture product_var %}product_{{ i }}{% endcapture %}

      {% assign video_url = section.settings[video_var] %}
      {% assign product = section.settings[product_var] %}

      {% if video_url != blank %}
        <div class="tiktok-slide">
          <div class="video-container">
            {% if video_url contains "/video/" %}
              {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
              <iframe class="tiktok-embed" src="https://www.tiktok.com/embed/{{ video_id }}" frameborder="0" allowfullscreen scrolling="no"></iframe>
            {% else %}
              <p style="color: red;">URL inválida. Asegúrate de ingresar un enlace correcto.</p>
            {% endif %}
          </div>

          {% if product != blank %}
          <div class="product-box">
            <a href="{{ product.url }}" class="product-link">
              <img src="{{ product.featured_image | img_url: '150x150' }}" alt="{{ product.title }}">
              <div class="product-info">
                <span class="product-title" style="color: {{ section.settings.text_color }};">{{ product.title }}</span>
                <span class="product-price">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span class="product-old-price">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </span>
              </div>
            </a>
          </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
/* Contenedor principal */
.tiktok-slider-container {
  padding: 20px;
  border-radius: 10px;
  overflow-x: auto;
}

/* Slider con 4.5 videos visibles */
.tiktok-slider {
  display: flex;
  gap: 10px;
  overflow-x: scroll;
  scroll-snap-type: x mandatory;
  max-width: 1200px;
  margin: auto;
  padding: 10px;
}

/* Slides */
.tiktok-slide {
  flex: 0 0 calc(100% / 4.5);
  max-width: calc(100% / 4.5);
  scroll-snap-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Videos */
.tiktok-embed {
  width: 100%;
  aspect-ratio: 9 / 16;
  border-radius: 10px;
  display: block;
}

/* Estilos del Producto */
.product-box {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 200px;
  margin-top: 10px;
  text-align: left;
}

.product-link {
  display: flex;
  align-items: center;
  text-decoration: none;
  color: #333;
  flex-grow: 1;
}

.product-link img {
  width: 50px;
  height: 50px;
  border-radius: 5px;
  margin-right: 10px;
}

.product-info {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.product-title {
  font-size: 12px;
  color: #333;
  line-height: 1.2;
}

.product-price {
  font-size: 12px;
  font-weight: bold;
  color: #f05454;
}

.product-old-price {
  font-size: 12px;
  text-decoration: line-through;
  color: #888;
  margin-left: 5px;
}

/* Scrollbar */
.tiktok-slider::-webkit-scrollbar {
  height: 8px;
}

.tiktok-slider::-webkit-scrollbar-thumb {
  background: #aaa;
  border-radius: 10px;
}

.tiktok-slider::-webkit-scrollbar-track {
  background: #ddd;
}
</style>

