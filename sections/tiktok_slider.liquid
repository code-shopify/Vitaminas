{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Calificación (Ejemplo: 4.8)",
      "default": "4.8"
    },
    {
      "type": "text",
      "id": "reviews",
      "label": "Número de reseñas",
      "default": "1,450 reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Opinan de Vitatú"
    },
    {
      "type": "textarea",
      "id": "bottom_message",
      "label": "Mensaje inferior",
      "default": "*EL CONSUMO DE ESTE PRODUCTO ES RESPONSABILIDAD DE QUIÉN LO RECOMIENDA Y DE QUIÉN LO USA, ESTE PRODUCTO NO ES UN MEDICAMENTO*"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FEF8F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "url",
      "id": "video_1",
      "label": "TikTok Video 1"
    },
    {
      "type": "url",
      "id": "video_2",
      "label": "TikTok Video 2"
    },
    {
      "type": "url",
      "id": "video_3",
      "label": "TikTok Video 3"
    },
    {
      "type": "url",
      "id": "video_4",
      "label": "TikTok Video 4"
    },
    {
      "type": "url",
      "id": "video_5",
      "label": "TikTok Video 5"
    },
    {
      "type": "url",
      "id": "video_6",
      "label": "TikTok Video 6"
    },
    {
      "type": "url",
      "id": "video_7",
      "label": "TikTok Video 7"
    },
    {
      "type": "url",
      "id": "video_8",
      "label": "TikTok Video 8"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<!-- Forzamos a que los contenedores externos ocupen el 100% del ancho -->
<style>
  .t4s-section-inner.t4s-container-wrap,
  .t4s-container {
    width: 100% !important;
    max-width: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
  }
</style>

<!-- INICIO del contenedor principal -->
<div class="t4s-section-inner t4s-container-wrap">
  <div class="t4s-container">
    <div class="tiktok-slider-container" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
      
      <!-- Sección Superior -->
      <div class="tiktok-slider-header">
        <!-- Calificación y Reseñas -->
        <div class="rating-reviews">
          <div class="star-rating">
            <div class="stars">
              {% assign rating_val = section.settings.rating | plus: 0 %}
              {% assign full_stars = rating_val | floor %}
              {% assign fraction = rating_val | minus: full_stars %}
              {% assign partial_percent = fraction | times: 100 %}
              {% assign next_star = full_stars | plus: 1 %}
              {% for star in (1..5) %}
                {% if star <= full_stars %}
                  <span class="star full">&#9733;</span>
                {% elsif star == next_star %}
                  {% if fraction > 0 %}
                    <span class="star partial" style="--fill: {{ partial_percent }}%;">&#9733;</span>
                  {% else %}
                    <span class="star empty">&#9733;</span>
                  {% endif %}
                {% else %}
                  <span class="star empty">&#9733;</span>
                {% endif %}
              {% endfor %}
            </div>
            <span class="rating-value">{{ rating_val }}</span>
          </div>
          <span class="reviews">{{ section.settings.reviews }}</span>
        </div>
        
        <h2 class="slider-title">{{ section.settings.title }}</h2>
      </div>

      <!-- Botón Izquierdo -->
      <button class="nav-button left-button" onclick="scrollSlider(-1)">&#10094;</button>

      <!-- Carrusel de TikToks -->
      <div class="tiktok-carousel">
        <div class="tiktok-slider">
          {% for i in (1..8) %}
            {% capture video_var %}video_{{ i }}{% endcapture %}
            {% assign video_url = section.settings[video_var] %}
            {% if video_url contains "/video/" %}
              {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
              <div class="tiktok-slide">
                <div class="with-border video-container">
                  <!-- Se inserta el iframe; posteriormente se usará el overlay para controlarlo -->
                  <iframe class="tiktok-embed video-{{ i }}"
                    src="https://www.tiktok.com/embed/{{ video_id }}?embedId=1"
                    frameborder="0"
                    allow="autoplay; fullscreen; picture-in-picture"
                    scrolling="no"
                    data-video>
                  </iframe>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- Botón Derecho -->
      <button class="nav-button right-button" onclick="scrollSlider(1)">&#10095;</button>

      <!-- Mensaje Inferior -->
      <p class="bottom-message">{{ section.settings.bottom_message }}</p>

    </div>
  </div>
</div>
<!-- FIN del contenedor principal -->

<style>
/* Contenedor principal del slider */
.tiktok-slider-container {
  text-align: center;
  padding: 60px 20px;
  border-radius: 10px;
  position: relative;
  width: 100%;
  max-width: 100%;
  margin: 0 auto;
}

/* Sección superior */
.tiktok-slider-header {
  margin-bottom: 40px;
}

/* Rating y reseñas */
.rating-reviews {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  font-size: 14px;
  margin-bottom: 10px;
}

.star-rating {
  display: flex;
  align-items: center;
  gap: 8px;
}

.stars {
  display: flex;
  gap: 2px;
}

.rating-value {
  font-weight: bold;
  color: #333;
}

.reviews {
  color: #999;
}

.slider-title {
  font-size: 32px;
  font-weight: 700;
  margin: 0;
}

/* Carrusel con scroll horizontal */
.tiktok-carousel {
  overflow-x: scroll;
  scroll-behavior: smooth;
  -ms-overflow-style: none;
  scrollbar-width: none;
}
.tiktok-carousel::-webkit-scrollbar {
  display: none;
}

/* Contenedor interno de slides */
.tiktok-slider {
  display: flex;
  gap: 8px;
  align-items: center;
}

/* Cada slide */
.tiktok-slide {
  flex: 0 0 calc(100% / 4.5);
  max-width: calc(100% / 4.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

/* Marco con borde degradado (rojo/azul) */
.with-border {
  padding: 2px;
  border-radius: 15px;
  background: linear-gradient(0deg, #fe2d52, #28ffff);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Overlay para captar clics y simular play/pause */
.video-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  cursor: pointer;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0,63,161,0.22);
  transition: background 0.3s ease;
  border-radius: 15px;
}
.video-overlay.playing {
  background: rgba(0,0,0,0);
}
.play-icon {
  width: 50px;
  height: 50px;
  background: rgba(255,255,255,0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.3s ease;
}
.play-icon::before {
  content: '';
  border-style: solid;
  border-width: 10px 0 10px 20px;
  border-color: transparent transparent transparent #000;
  margin-left: 4px;
}
.video-overlay.playing .play-icon {
  opacity: 0;
}

/* Estilos de las estrellas */
.star {
  font-size: 16px;
  line-height: 1;
}
.star.full {
  color: gold;
}
.star.empty {
  color: #ccc;
}
.star.partial {
  position: relative;
  display: inline-block;
  color: #ccc;
}
.star.partial::before {
  content: "★";
  position: absolute;
  top: 0;
  left: 0;
  width: var(--fill);
  overflow: hidden;
  color: gold;
}

/* Botones de navegación */
.nav-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  font-size: 20px;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
.left-button {
  left: 10px;
}
.right-button {
  right: 10px;
}

.bottom-message {
  margin-top: 40px;
  font-size: 14px;
  color: #666;
}

/* Media queries responsivas */
@media (max-width: 767px) {
  .tiktok-slider-container {
    padding: 30px 10px;
  }
  .tiktok-slide {
    flex: 0 0 calc(100% / 1.5);
    max-width: calc(100% / 1.5);
  }
  .nav-button {
    width: 30px;
    height: 30px;
    font-size: 16px;
  }
}

@media (min-width: 768px) and (max-width: 1023px) {
  .tiktok-slide {
    flex: 0 0 calc(100% / 2.5);
    max-width: calc(100% / 2.5);
  }
}
</style>

<script>
/**
 * VideoController:
 * - Al cargar la página, se guarda el HTML original (el iframe) en cada contenedor.
 * - Se añade un overlay sobre cada video para captar el clic.
 * - Al hacer clic en el overlay:
 *     - Si el video no se está reproduciendo, se inserta el iframe (simulando "play").
 *     - Si ya se está reproduciendo, se elimina el iframe (simulando "pause").
 *     - Además, se pausa cualquier otro video reproduciéndose.
 */
class VideoController {
  constructor() {
    if (VideoController.instance) return VideoController.instance;
    VideoController.instance = this;
    this.currentPlayingContainer = null;
    this.initializeEvents();
  }

  initializeEvents() {
    const containers = document.querySelectorAll(".video-container");
    containers.forEach((container) => {
      // Guarda el HTML original (del iframe) para reinsertarlo cuando se requiera reproducir.
      const iframe = container.querySelector('.tiktok-embed');
      if (iframe) {
        container.dataset.originalHtml = iframe.outerHTML;
      }
      // Añade el overlay si no existe.
      let overlay = container.querySelector('.video-overlay');
      if (!overlay) {
        overlay = document.createElement('div');
        overlay.className = 'video-overlay';
        const playIcon = document.createElement('div');
        playIcon.className = 'play-icon';
        overlay.appendChild(playIcon);
        container.appendChild(overlay);
      }
      overlay.addEventListener('click', (e) => {
        e.preventDefault();
        this.handleVideo(container);
      });
    });
  }

  handleVideo(container) {
    // Pausa el video que estuviera reproduciéndose en otro contenedor.
    if (this.currentPlayingContainer && this.currentPlayingContainer !== container) {
      this.pauseVideo(this.currentPlayingContainer);
    }
    // Si el contenedor ya está reproduciendo, se pausa.
    if (container.dataset.playing === "true") {
      this.pauseVideo(container);
      this.currentPlayingContainer = null;
    } else {
      // Reproduce el video reinsertando el iframe.
      const overlay = container.querySelector('.video-overlay');
      // Asegura que no exista un iframe anterior.
      const existingIframe = container.querySelector('.tiktok-embed');
      if (existingIframe) {
        existingIframe.remove();
      }
      if (container.dataset.originalHtml) {
        container.insertAdjacentHTML('afterbegin', container.dataset.originalHtml);
      }
      container.dataset.playing = "true";
      if (overlay) {
        overlay.classList.add("playing");
      }
      this.currentPlayingContainer = container;
    }
  }

  pauseVideo(container) {
    // Elimina el iframe para detener la reproducción.
    const iframe = container.querySelector('.tiktok-embed');
    if (iframe) {
      iframe.remove();
    }
    container.dataset.playing = "false";
    const overlay = container.querySelector('.video-overlay');
    if (overlay) {
      overlay.classList.remove("playing");
    }
  }

  pauseAll() {
    if (this.currentPlayingContainer) {
      this.pauseVideo(this.currentPlayingContainer);
      this.currentPlayingContainer = null;
    }
  }
}

document.addEventListener("DOMContentLoaded", function () {
  const videoController = new VideoController();

  // Función para desplazar el carrusel con las flechas y pausar cualquier video reproduciéndose.
  window.scrollSlider = function(direction) {
    const container = document.querySelector(".tiktok-carousel");
    const slide = container.querySelector(".tiktok-slide");
    if (slide) {
      const slideWidth = slide.offsetWidth + 8;
      container.scrollBy({ left: slideWidth * direction, behavior: "smooth" });
    }
    videoController.pauseAll();
  };
});
</script>




