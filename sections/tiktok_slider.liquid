{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Calificación (Ejemplo: 4.8)",
      "default": "4.8"
    },
    {
      "type": "text",
      "id": "reviews",
      "label": "Número de reseñas",
      "default": "1,450 reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Opinan de Vitatú"
    },
    {
      "type": "textarea",
      "id": "bottom_message",
      "label": "Mensaje inferior",
      "default": "*EL CONSUMO DE ESTE PRODUCTO ES RESPONSABILIDAD DE QUIÉN LO RECOMIENDA Y DE QUIÉN LO USA, ESTE PRODUCTO NO ES UN MEDICAMENTO*"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FEF8F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "url",
      "id": "video_1",
      "label": "TikTok Video 1"
    },
    {
      "type": "url",
      "id": "video_2",
      "label": "TikTok Video 2"
    },
    {
      "type": "url",
      "id": "video_3",
      "label": "TikTok Video 3"
    },
    {
      "type": "url",
      "id": "video_4",
      "label": "TikTok Video 4"
    },
    {
      "type": "url",
      "id": "video_5",
      "label": "TikTok Video 5"
    },
    {
      "type": "url",
      "id": "video_6",
      "label": "TikTok Video 6"
    },
    {
      "type": "url",
      "id": "video_7",
      "label": "TikTok Video 7"
    },
    {
      "type": "url",
      "id": "video_8",
      "label": "TikTok Video 8"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="tiktok-slider-container" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  
  <!-- Sección Superior -->
  <div class="tiktok-slider-header text-center mb-4">
    <div class="rating-reviews d-flex justify-content-center align-items-center mb-2">
      <div class="star-rating d-flex align-items-center me-2">
        <div class="stars d-flex">
          {% assign rating_val = section.settings.rating | plus: 0 %}
          {% assign full_stars = rating_val | floor %}
          {% assign fraction = rating_val | minus: full_stars %}
          {% assign partial_percent = fraction | times: 100 %}
          {% assign next_star = full_stars | plus: 1 %}
          {% for star in (1..5) %}
            {% if star <= full_stars %}
              <span class="star full">&#9733;</span>
            {% elsif star == next_star %}
              {% if fraction > 0 %}
                <span class="star partial" style="--fill: {{ partial_percent }}%;">&#9733;</span>
              {% else %}
                <span class="star empty">&#9733;</span>
              {% endif %}
            {% else %}
              <span class="star empty">&#9733;</span>
            {% endif %}
          {% endfor %}
        </div>
        <span class="rating-value ms-2">{{ rating_val }}</span>
      </div>
      <span class="reviews">{{ section.settings.reviews }}</span>
    </div>
    <h2 class="slider-title">{{ section.settings.title }}</h2>
  </div>

  <!-- Carousel de TikToks usando Bootstrap -->
  <div id="tiktokCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      {% for i in (1..8) %}
        {% capture video_var %}video_{{ i }}{% endcapture %}
        {% assign video_url = section.settings[video_var] %}
        {% if video_url contains "/video/" %}
          {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
          <div class="carousel-item {% if forloop.first %}active{% endif %}">
            <div class="with-border video-container">
              <iframe class="tiktok-embed"
                src="https://www.tiktok.com/embed/{{ video_id }}?embedId=1&autoplay=0&muted=0"
                frameborder="0"
                allow="autoplay; fullscreen; picture-in-picture"
                scrolling="no"
                data-video>
              </iframe>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#tiktokCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#tiktokCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Siguiente</span>
    </button>
  </div>

  <!-- Mensaje Inferior -->
  <p class="bottom-message mt-4">{{ section.settings.bottom_message }}</p>
</div>

<style>
.tiktok-slider-container {
  padding: 60px 20px;
  border-radius: 10px;
  max-width: 1200px;
  margin: 0 auto;
}
.rating-reviews .star {
  font-size: 16px;
  margin-right: 2px;
}
.star.full {
  color: gold;
}
.star.empty {
  color: #ccc;
}
.star.partial {
  position: relative;
  display: inline-block;
  color: #ccc;
}
.star.partial::before {
  content: "★";
  position: absolute;
  top: 0;
  left: 0;
  width: var(--fill);
  overflow: hidden;
  color: gold;
}
.with-border {
  padding: 2px;
  border-radius: 15px;
  border: 2px solid transparent;
  background: linear-gradient(to bottom, #00ffff, #ff2d55);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}
.video-container {
  width: 100%;
  height: 0;
  padding-bottom: 177.78%; /* Ratio 9:16 */
  position: relative;
}
.video-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 15px;
  object-fit: cover;
}
.bottom-message {
  font-size: 14px;
  color: #666;
}
</style>

{% javascript %}
document.addEventListener("DOMContentLoaded", function() {
  var tiktokCarousel = document.getElementById('tiktokCarousel');

  // Al iniciarse el cambio de slide (evento 'slide.bs.carousel') pausamos el video del slide saliente.
  tiktokCarousel.addEventListener('slide.bs.carousel', function (e) {
    var activeSlide = tiktokCarousel.querySelector('.carousel-item.active');
    if (activeSlide) {
      var iframe = activeSlide.querySelector('iframe[data-video]');
      if (iframe) {
        var src = iframe.getAttribute("src");
        // Cambiamos autoplay=1 por autoplay=0 para pausar el video
        iframe.setAttribute("src", src.replace("autoplay=1", "autoplay=0"));
      }
    }
  });

  // Una vez completada la transición (evento 'slid.bs.carousel') activamos el video del slide entrante.
  tiktokCarousel.addEventListener('slid.bs.carousel', function (e) {
    var activeSlide = tiktokCarousel.querySelector('.carousel-item.active');
    if (activeSlide) {
      var iframe = activeSlide.querySelector('iframe[data-video]');
      if (iframe) {
        var src = iframe.getAttribute("src");
        // Activamos autoplay cambiando autoplay=0 por autoplay=1
        iframe.setAttribute("src", src.replace("autoplay=0", "autoplay=1"));
      }
    }
  });
});
{% endjavascript %}

