{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Calificación (Ejemplo: 4.8)",
      "default": "3.5"
    },
    {
      "type": "text",
      "id": "reviews",
      "label": "Número de reseñas",
      "default": "1,450 reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Opiniones de Vitaminas"
    },
    {
      "type": "textarea",
      "id": "bottom_message",
      "label": "Mensaje inferior",
      "default": "*EL CONSUMO DE ESTE PRODUCTO ES RESPONSABILIDAD DE QUIÉN LO RECOMIENDA Y DE QUIÉN LO USA, ESTE PRODUCTO NO ES UN MEDICAMENTO*"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FEF8F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "url",
      "id": "video_1",
      "label": "TikTok Video 1"
    },
    {
      "type": "url",
      "id": "video_2",
      "label": "TikTok Video 2"
    },
    {
      "type": "url",
      "id": "video_3",
      "label": "TikTok Video 3"
    },
    {
      "type": "url",
      "id": "video_4",
      "label": "TikTok Video 4"
    },
    {
      "type": "url",
      "id": "video_5",
      "label": "TikTok Video 5"
    },
    {
      "type": "url",
      "id": "video_6",
      "label": "TikTok Video 6"
    },
    {
      "type": "url",
      "id": "video_7",
      "label": "TikTok Video 7"
    },
    {
      "type": "url",
      "id": "video_8",
      "label": "TikTok Video 8"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="tiktok-slider-container" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  
  <!-- Sección Superior: Calificación, Reseñas y Título -->
  <div class="tiktok-slider-header">
    <div class="rating-reviews">
      <div class="star-rating">
        <div class="stars">
          {% assign rating_val = section.settings.rating | plus: 0 %}
          {% assign full_stars = rating_val | floor %}
          {% assign fraction = rating_val | minus: full_stars %}
          {% assign partial_percent = fraction | times: 100 %}
          {% assign next_star = full_stars | plus: 1 %}
          {% for star in (1..5) %}
            {% if star <= full_stars %}
              <span class="star full">&#9733;</span>
            {% elsif star == next_star %}
              {% if fraction > 0 %}
                <span class="star partial" style="--fill: {{ partial_percent }}%;">&#9733;</span>
              {% else %}
                <span class="star empty">&#9733;</span>
              {% endif %}
            {% else %}
              <span class="star empty">&#9733;</span>
            {% endif %}
          {% endfor %}
        </div>
        <span class="rating-value">{{ rating_val }}</span>
      </div>
      <span class="reviews">{{ section.settings.reviews }}</span>
    </div>
    <h2 class="slider-title">{{ section.settings.title }}</h2>
  </div>

  <!-- Botón de navegación Izquierdo -->
  <button class="nav-button left-button" onclick="scrollSlider(-1)">&#10094;</button>

  <!-- Carrusel Horizontal de TikToks -->
  <div class="tiktok-carousel">
    <div class="tiktok-slider">
      {% for i in (1..8) %}
        {% capture video_var %}video_{{ i }}{% endcapture %}
        {% assign video_url = section.settings[video_var] %}
        {% if video_url contains "/video/" %}
          {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
          <div class="tiktok-slide">
            <div class="with-border video-container">
              <iframe class="tiktok-embed video-{{ i }}"
                src="https://www.tiktok.com/embed/{{ video_id }}?embedId=1&autoplay=0&muted=0"
                frameborder="0"
                allow="autoplay; fullscreen; picture-in-picture"
                scrolling="no"
                data-video>
              </iframe>
            </div>
            <!-- Botones de control Play/Pause -->
            <div class="pause-button hidden-button">❚❚</div>
            <div class="play-button">▷</div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <!-- Botón de navegación Derecho -->
  <button class="nav-button right-button" onclick="scrollSlider(1)">&#10095;</button>

  <!-- Mensaje Inferior -->
  <p class="bottom-message">{{ section.settings.bottom_message }}</p>
</div>

<style>
/* Contenedor principal de la sección */
.tiktok-slider-container {
  text-align: center;
  padding: 60px 20px;
  border-radius: 10px;
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
}

/* Sección superior */
.tiktok-slider-header {
  margin-bottom: 40px;
}

/* Calificación y reseñas */
.rating-reviews {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  font-size: 14px;
  margin-bottom: 10px;
}
.star-rating {
  display: flex;
  align-items: center;
  gap: 8px;
}
.stars {
  display: flex;
  gap: 2px;
}
.rating-value {
  font-weight: bold;
  color: #333;
}
.reviews {
  color: #999;
}

/* Título principal */
.slider-title {
  font-size: 32px;
  font-weight: 700;
  margin: 0;
}

/* Carrusel con scroll horizontal */
.tiktok-carousel {
  overflow-x: auto;
  scroll-behavior: smooth;
  -ms-overflow-style: none;  /* IE y Edge */
  scrollbar-width: none;     /* Firefox */
  margin: 0 auto;
  max-width: 100%;
  position: relative;
  padding: 10px 0;
}
.tiktok-carousel::-webkit-scrollbar {
  display: none;
}

/* Contenedor interno de slides (fila) */
.tiktok-slider {
  display: flex;
  gap: 16px;
}

/* Cada slide: ancho fijo para mostrar varias tarjetas en fila */
.tiktok-slide {
  flex: 0 0 240px; /* Ajusta el ancho a tu gusto */
  max-width: 240px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

/* Marco degradado alrededor del iframe */
.with-border {
  position: relative;
  width: 100%;
  padding: 2px;
  border-radius: 15px;
  border: 2px solid transparent;
  background: linear-gradient(to bottom, #00ffff, #ff2d55);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

/* Contenedor para el video, mantiene relación de aspecto 9:16 */
.video-container {
  width: 100%;
  position: relative;
  padding-top: 177.78%; /* (16 / 9) * 100% = 177.78% */
  border-radius: 15px;
  overflow: hidden;
}

/* Ajuste del iframe dentro del contenedor con posición absoluta */
.video-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 15px;
}

/* Estrellas */
.star {
  font-size: 16px;
  line-height: 1;
}
.star.full {
  color: gold;
}
.star.empty {
  color: #ccc;
}
.star.partial {
  position: relative;
  display: inline-block;
  color: #ccc;
}
.star.partial::before {
  content: "★";
  position: absolute;
  top: 0;
  left: 0;
  width: var(--fill);
  overflow: hidden;
  color: gold;
}

/* Botones de navegación */
.nav-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  font-size: 20px;
  cursor: pointer;
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
}
.left-button {
  left: 10px;
}
.right-button {
  right: 10px;
}

/* Botones de Play/Pause sobre cada slide */
.play-button,
.pause-button {
  position: absolute;
  bottom: 10px;
  right: 10px;
  width: 40px;
  height: 40px;
  background: rgba(0,0,0,0.6);
  color: #fff;
  border-radius: 50%;
  font-size: 20px;
  cursor: pointer;
  z-index: 20;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pause-button {
  display: none; /* Oculto por defecto */
}
.hidden-button {
  opacity: 0;
  transition: opacity 0.5s ease;
}

/* Mensaje inferior */
.bottom-message {
  margin-top: 40px;
  font-size: 14px;
  color: #666;
}
</style>

{% javascript %}
  // Controlador para manejar la reproducción de iframes
  class VideoController {
    constructor() {
      if (VideoController.instance) return VideoController.instance;
      VideoController.instance = this;
      this.currentPlaying = null;
      this.initEvents();
    }
    
    initEvents() {
      const slides = document.querySelectorAll(".tiktok-slide");
      
      slides.forEach(slide => {
        const playBtn = slide.querySelector(".play-button");
        const pauseBtn = slide.querySelector(".pause-button");
        const iframe = slide.querySelector(".tiktok-embed");
        
        // Al hacer clic en Play
        playBtn.addEventListener("click", () => {
          // 1) Pausar cualquier otro video en reproducción
          document.querySelectorAll(".tiktok-embed").forEach(otherIframe => {
            if (otherIframe !== iframe) {
              const prevSrc = otherIframe.getAttribute("src");
              otherIframe.setAttribute("src", prevSrc.replace("autoplay=1", "autoplay=0"));
            }
          });

          // 2) Iniciar reproducción del video actual
          const currentSrc = iframe.getAttribute("src");
          if (!currentSrc.includes("autoplay=1")) {
            iframe.setAttribute("src", currentSrc.replace("autoplay=0", "autoplay=1"));
          }

          // 3) Actualizar botones
          playBtn.style.display = "none";
          pauseBtn.style.display = "flex";
          this.currentPlaying = iframe;
        });
        
        // Al hacer clic en Pause
        pauseBtn.addEventListener("click", () => {
          // Pausar el video actual
          const currentSrc = iframe.getAttribute("src");
          iframe.setAttribute("src", currentSrc.replace("autoplay=1", "autoplay=0"));
          
          // Actualizar botones
          pauseBtn.style.display = "none";
          playBtn.style.display = "flex";
          this.currentPlaying = null;
        });
      });
    }
  }

  document.addEventListener("DOMContentLoaded", function () {
    // Inicializa el controlador de video
    new VideoController();

    // Función para desplazar el carrusel
    window.scrollSlider = function(direction) {
      const container = document.querySelector(".tiktok-carousel");
      const slide = container.querySelector(".tiktok-slide");
      if (slide) {
        // Ancho de cada slide + gap
        const slideWidth = slide.offsetWidth + 16;
        // Desplaza la vista a la izq o der según 'direction'
        container.scrollBy({ left: slideWidth * direction, behavior: "smooth" });
      }
    };
  });
{% endjavascript %}

