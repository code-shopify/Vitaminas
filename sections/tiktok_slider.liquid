{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Calificación (Ejemplo: 4.8)",
      "default": "4.8"
    },
    {
      "type": "text",
      "id": "reviews",
      "label": "Número de reseñas",
      "default": "1,450 reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Opiniones de Vitaminas"
    },
    {
      "type": "textarea",
      "id": "bottom_message",
      "label": "Mensaje inferior",
      "default": "*EL CONSUMO DE ESTE PRODUCTO ES RESPONSABILIDAD DE QUIÉN LO RECOMIENDA Y DE QUIÉN LO USA, ESTE PRODUCTO NO ES UN MEDICAMENTO*"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FEF8F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "url",
      "id": "video_1",
      "label": "TikTok Video 1"
    },
    {
      "type": "url",
      "id": "video_2",
      "label": "TikTok Video 2"
    },
    {
      "type": "url",
      "id": "video_3",
      "label": "TikTok Video 3"
    },
    {
      "type": "url",
      "id": "video_4",
      "label": "TikTok Video 4"
    },
    {
      "type": "url",
      "id": "video_5",
      "label": "TikTok Video 5"
    },
    {
      "type": "url",
      "id": "video_6",
      "label": "TikTok Video 6"
    },
    {
      "type": "url",
      "id": "video_7",
      "label": "TikTok Video 7"
    },
    {
      "type": "url",
      "id": "video_8",
      "label": "TikTok Video 8"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="container-fluid tiktok-slider-wrapper" style="background-color: {{ section.settings.background_color }};">
  <div class="container text-center py-5">
    
    <!-- Sección de estrellas y título -->
    <div class="tiktok-slider-header">
      <div class="rating-reviews d-flex justify-content-center align-items-center">
        <div class="star-rating">
          <div class="stars">
            {% assign rating_val = section.settings.rating | plus: 0 %}
            {% assign full_stars = rating_val | floor %}
            {% assign fraction = rating_val | minus: full_stars %}
            {% assign partial_percent = fraction | times: 100 %}
            {% assign next_star = full_stars | plus: 1 %}
            {% for star in (1..5) %}
              <span class="star {% if star <= full_stars %}full{% elsif star == next_star and fraction > 0 %}partial{% else %}empty{% endif %}" style="--fill: {{ partial_percent }}%;">
                ★
              </span>
            {% endfor %}
          </div>
          <span class="rating-value ms-2">{{ rating_val }}</span>
        </div>
        <span class="reviews ms-2">{{ section.settings.reviews }}</span>
      </div>
      <h2 class="slider-title mt-3">{{ section.settings.title }}</h2>
    </div>

    <!-- Controles de navegación -->
    <div class="d-flex justify-content-between align-items-center my-3">
      <button class="btn nav-button left-button" onclick="scrollSlider(-1)">◀</button>
      <div class="tiktok-carousel-container">
        <div class="tiktok-carousel">
          {% for i in (1..8) %}
            {% capture video_var %}video_{{ i }}{% endcapture %}
            {% assign video_url = section.settings[video_var] %}
            {% if video_url contains "/video/" %}
              {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
              <div class="tiktok-slide">
                <div class="video-container">
                  <iframe class="tiktok-embed"
                    src="https://www.tiktok.com/embed/{{ video_id }}?autoplay=1&mute=0"
                    frameborder="0"
                    allow="autoplay; fullscreen; picture-in-picture"
                    scrolling="no">
                  </iframe>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      <button class="btn nav-button right-button" onclick="scrollSlider(1)">▶</button>
    </div>

    <!-- Mensaje inferior -->
    <p class="bottom-message mt-4">{{ section.settings.bottom_message }}</p>

  </div>
</div>

<style>
/* Contenedor general del slider */
.tiktok-carousel-container {
  width: 100%;
  overflow-x: hidden;
  scroll-behavior: smooth;
}

/* Mostrar máximo 5 videos en resoluciones grandes */
@media (min-width: 1025px) {
  .tiktok-carousel {
    display: flex;
    gap: 10px;
    max-width: calc(300px * 5);
    overflow: hidden;
  }
}

/* Mostrar entre 2 y 3 videos en tablets */
@media (max-width: 1024px) and (min-width: 768px) {
  .tiktok-carousel {
    display: flex;
    gap: 10px;
    max-width: calc(300px * 3);
    overflow: hidden;
  }
}

/* Mostrar 1 video en móviles */
@media (max-width: 767px) {
  .tiktok-carousel {
    display: flex;
    gap: 10px;
    max-width: 300px;
    overflow: hidden;
  }
}

/* Ajuste del tamaño correcto del video */
.tiktok-slide {
  flex: 0 0 auto;
  width: 300px;
}

/* Ajuste del iframe */
.video-container {
  position: relative;
  width: 100%;
  padding-top: 177.77%;
  border-radius: 15px;
  overflow: hidden;
  background: #000;
}

.video-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 15px;
}

/* Botones de navegación */
.nav-button {
  background: rgba(255, 255, 255, 0.8);
  color: black;
  border: none;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  font-size: 24px;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: 0.3s;
}

.nav-button:hover {
  background: rgba(255, 255, 255, 1);
}
</style>

<script>
function scrollSlider(direction) {
  const container = document.querySelector(".tiktok-carousel-container");
  if (container) {
    const slideWidth = 310;
    container.scrollBy({ left: slideWidth * direction, behavior: "smooth" });
  }
}
</script>


