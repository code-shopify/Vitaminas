{% schema %}
{
  "name": "Perfil TikTok",
  "settings": [
    {
      "type": "text",
      "id": "username",
      "label": "Nombre de usuario",
      "default": "@alpharchive"
    },
    {
      "type": "text",
      "id": "followers",
      "label": "Seguidores",
      "default": "10.8M"
    },
    {
      "type": "text",
      "id": "videos_count",
      "label": "Número de videos",
      "default": "12W"
    },
    {
      "type": "text",
      "id": "hashtag",
      "label": "Hashtag principal",
      "default": "#sumise #beach"
    },
    {
      "type": "text",
      "id": "music",
      "label": "Música",
      "default": "magic - Mediasin & MAE.SUN"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "URL del video"
    }
  ],
  "presets": [
    {
      "name": "Perfil TikTok",
      "category": "Contenido Social"
    }
  ]
}
{% endschema %}

<style>
  .tiktok-profile-section {
    max-width: 375px;
    margin: 20px auto;
    font-family: -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .profile-header {
    display: flex;
    align-items: center;
    padding: 12px;
    border-bottom: 1px solid #e6e6e6;
  }

  .profile-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #ddd;
    margin-right: 12px;
  }

  .profile-info {
    flex-grow: 1;
  }

  .username {
    font-weight: 700;
    margin-bottom: 2px;
  }

  .stats {
    display: flex;
    gap: 15px;
    color: #666;
    font-size: 14px;
  }

  .video-container {
    position: relative;
    aspect-ratio: 9/16;
  }

  .tiktok-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-meta {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 12px;
    background: linear-gradient(transparent, rgba(0,0,0,0.8));
    color: white;
  }

  .hashtag {
    font-weight: 600;
    margin-bottom: 8px;
  }

  .music-credit {
    display: flex;
    align-items: center;
    font-size: 14px;
  }

  .music-icon {
    width: 20px;
    height: 20px;
    margin-right: 8px;
  }

  .cta-buttons {
    display: flex;
    gap: 10px;
    padding: 12px;
  }

  .cta-button {
    flex: 1;
    padding: 10px;
    border: none;
    border-radius: 4px;
    background: #f0f0f0;
    font-weight: 500;
  }
</style>

<div class="tiktok-profile-section">
  <!-- Encabezado de perfil -->
  <div class="profile-header">
    <div class="profile-avatar"></div>
    <div class="profile-info">
      <div class="username">{{ section.settings.username }}</div>
      <div class="stats">
        <span>{{ section.settings.followers }} seguidores</span>
        <span>{{ section.settings.videos_count }} videos</span>
      </div>
    </div>
  </div>

  <!-- Contenedor de video -->
  <div class="video-container">
    <iframe 
      class="tiktok-video"
      src="{{ section.settings.video_url }}"
      frameborder="0"
      allowfullscreen
    ></iframe>
    
    <!-- Metadatos del video -->
    <div class="video-meta">
      <div class="hashtag">{{ section.settings.hashtag }}</div>
      <div class="music-credit">
        <svg class="music-icon" viewBox="0 0 24 24"><path fill="currentColor" d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/></svg>
        {{ section.settings.music }}
      </div>
    </div>
  </div>

  <!-- Botones de acción -->
  <div class="cta-buttons">
    <button class="cta-button">Ver perfil</button>
    <button class="cta-button">Ver ahora</button>
  </div>
</div>