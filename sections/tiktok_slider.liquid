{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Calificación (Ejemplo: 4.8)",
      "default": "4.8"
    },
    {
      "type": "text",
      "id": "reviews",
      "label": "Número de reseñas",
      "default": "1,450 reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Opinan de Vitatú"
    },
    {
      "type": "textarea",
      "id": "bottom_message",
      "label": "Mensaje inferior",
      "default": "*EL CONSUMO DE ESTE PRODUCTO ES RESPONSABILIDAD DE QUIÉN LO RECOMIENDA Y DE QUIÉN LO USA, ESTE PRODUCTO NO ES UN MEDICAMENTO*"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FEF8F0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "url",
      "id": "video_1",
      "label": "TikTok Video 1"
    },
    {
      "type": "url",
      "id": "video_2",
      "label": "TikTok Video 2"
    },
    {
      "type": "url",
      "id": "video_3",
      "label": "TikTok Video 3"
    },
    {
      "type": "url",
      "id": "video_4",
      "label": "TikTok Video 4"
    },
    {
      "type": "url",
      "id": "video_5",
      "label": "TikTok Video 5"
    },
    {
      "type": "url",
      "id": "video_6",
      "label": "TikTok Video 6"
    },
    {
      "type": "url",
      "id": "video_7",
      "label": "TikTok Video 7"
    },
    {
      "type": "url",
      "id": "video_8",
      "label": "TikTok Video 8"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="container-fluid tiktok-slider-wrapper" style="background-color: {{ section.settings.background_color }};">
  <div class="container text-center py-5">
    
    <!-- Sección de estrellas y título -->
    <div class="tiktok-slider-header">
      <div class="rating-reviews d-flex justify-content-center align-items-center">
        <div class="star-rating">
          <div class="stars">
            {% assign rating_val = section.settings.rating | plus: 0 %}
            {% assign full_stars = rating_val | floor %}
            {% assign fraction = rating_val | minus: full_stars %}
            {% assign partial_percent = fraction | times: 100 %}
            {% assign next_star = full_stars | plus: 1 %}
            {% for star in (1..5) %}
              {% if star <= full_stars %}
                <span class="star full">&#9733;</span>
              {% elsif star == next_star and fraction > 0 %}
                <span class="star partial" style="--fill: {{ partial_percent }}%;">&#9733;</span>
              {% else %}
                <span class="star empty">&#9733;</span>
              {% endif %}
            {% endfor %}
          </div>
          <span class="rating-value ms-2">{{ rating_val }}</span>
        </div>
        <span class="reviews ms-2">{{ section.settings.reviews }}</span>
      </div>
      <h2 class="slider-title mt-3">{{ section.settings.title }}</h2>
    </div>

    <!-- Controles de navegación -->
    <div class="d-flex justify-content-between align-items-center my-3">
      <button class="btn btn-dark nav-button left-button" onclick="scrollSlider(-1)">◀</button>
      <div class="tiktok-carousel-container">
        <div class="d-flex overflow-hidden tiktok-carousel">
          {% for i in (1..8) %}
            {% capture video_var %}video_{{ i }}{% endcapture %}
            {% assign video_url = section.settings[video_var] %}
            {% if video_url contains "/video/" %}
              {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
              <div class="tiktok-slide mx-2">
                <div class="video-container">
                  <iframe class="tiktok-embed"
                    src="https://www.tiktok.com/embed/{{ video_id }}"
                    frameborder="0"
                    allow="autoplay; fullscreen; picture-in-picture"
                    scrolling="no">
                  </iframe>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      <button class="btn btn-dark nav-button right-button" onclick="scrollSlider(1)">▶</button>
    </div>

    <!-- Mensaje inferior -->
    <p class="bottom-message mt-4">{{ section.settings.bottom_message }}</p>

  </div>
</div>

<style>
/* Ajustar tamaño del video y contenedor */
.tiktok-slide {
  flex: 0 0 auto;
  width: 280px; /* Ajuste para formato 9:16 */
}

/* Mantener el aspecto 9:16 y bordes visibles */
.video-container {
  position: relative;
  width: 100%;
  padding-top: 177.77%;
  border-radius: 15px;
  overflow: hidden;
}

.video-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* Carrusel */
.tiktok-carousel-container {
  width: 85%;
  overflow-x: auto;
  white-space: nowrap;
  scroll-behavior: smooth;
}

/* Ocultar scrollbar */
.tiktok-carousel-container::-webkit-scrollbar {
  display: none;
}

/* Botones de navegación */
.nav-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  font-size: 20px;
}

/* Ajustes de estrellas */
.star {
  font-size: 20px;
}

.star.full {
  color: gold;
}

.star.empty {
  color: #ccc;
}

.star.partial {
  position: relative;
  display: inline-block;
  color: #ccc;
}

.star.partial::before {
  content: "★";
  position: absolute;
  top: 0;
  left: 0;
  width: var(--fill);
  overflow: hidden;
  color: gold;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
    function scrollSlider(direction) {
        const container = document.querySelector(".tiktok-carousel-container");
        if (container) {
            const slide = container.querySelector(".tiktok-slide");
            if (slide) {
                const slideWidth = slide.offsetWidth + 15; // Se ajusta con margen
                container.scrollBy({ left: slideWidth * direction, behavior: "smooth" });
            }
        }
    }
});
</script>

