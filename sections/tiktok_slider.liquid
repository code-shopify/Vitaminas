{% schema %}
{
  "name": "TikTok Slider",
  "settings": [
    {
      "type": "text",
      "id": "rating",
      "label": "Calificación (Ejemplo: 4.8)",
      "default": "4.8"
    },
    {
      "type": "text",
      "id": "reviews",
      "label": "Número de reseñas",
      "default": "1,450 reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Reseñas de Vitatú"
    },
    {
      "type": "textarea",
      "id": "bottom_message",
      "label": "Mensaje inferior",
      "default": "*EL CONSUMO DE ESTE PRODUCTO ES RESPONSABILIDAD DE QUIÉN LO RECOMIENDA Y DE QUIÉN LO USA, ESTE PRODUCTO NO ES UN MEDICAMENTO*"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#333333"
    },
    {
      "type": "url",
      "id": "video_1",
      "label": "TikTok Video 1"
    },
    {
      "type": "url",
      "id": "video_2",
      "label": "TikTok Video 2"
    },
    {
      "type": "url",
      "id": "video_3",
      "label": "TikTok Video 3"
    },
    {
      "type": "url",
      "id": "video_4",
      "label": "TikTok Video 4"
    },
    {
      "type": "url",
      "id": "video_5",
      "label": "TikTok Video 5"
    },
    {
      "type": "url",
      "id": "video_6",
      "label": "TikTok Video 6"
    },
    {
      "type": "url",
      "id": "video_7",
      "label": "TikTok Video 7"
    },
    {
      "type": "url",
      "id": "video_8",
      "label": "TikTok Video 8"
    }
  ],
  "presets": [
    {
      "name": "TikTok Slider",
      "category": "Multimedia"
    }
  ]
}
{% endschema %}

<div class="tiktok-slider-container" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  <div class="rating-container">
    <span class="rating-value">{{ section.settings.rating }}</span>
    <div class="stars">
      {% assign rating_val = section.settings.rating | plus: 0 %}
      {% assign full_stars = rating_val | floor %}
      {% assign fraction = rating_val | minus: full_stars %}
      {% assign partial_percent = fraction | times: 100 %}
      {% assign next_star = full_stars | plus: 1 %}
      
      {% for star in (1..5) %}
        {% if star <= full_stars %}
          <span class="star full">★</span>
        {% elsif star == next_star and fraction > 0 %}
          <span class="star partial" style="background: linear-gradient(90deg, gold {{ partial_percent }}%, #ccc {{ partial_percent }}%);">★</span>
        {% else %}
          <span class="star empty">★</span>
        {% endif %}
      {% endfor %}
    </div>
    <span class="reviews">{{ section.settings.reviews }}</span>
  </div>

  <h2 class="slider-title">{{ section.settings.title }}</h2>

  <div class="tiktok-carousel">
    <div class="tiktok-slider">
      {% for i in (1..8) %}
        {% capture video_var %}video_{{ i }}{% endcapture %}
        {% assign video_url = section.settings[video_var] %}
        {% if video_url contains "/video/" %}
          {% assign video_id = video_url | split: "/video/" | last | split: "?" | first %}
          <div class="tiktok-slide">
            <div class="video-container">
              <iframe class="tiktok-embed"
                src="https://www.tiktok.com/embed/{{ video_id }}?autoplay=1&mute=0"
                frameborder="0"
                allow="autoplay; fullscreen; picture-in-picture"
                scrolling="no">
              </iframe>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <p class="bottom-message">{{ section.settings.bottom_message }}</p>
</div>

<style>
/* Estrellas */
.rating-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
}
.stars {
  display: flex;
}
.star {
  font-size: 20px;
  color: #ccc;
}
.star.full {
  color: gold;
}
.star.partial {
  background-clip: text;
  color: transparent;
}
.star.empty {
  color: #ccc;
}

/* Slider */
.tiktok-carousel {
  overflow-x: auto;
  scroll-behavior: smooth;
}
.tiktok-slider {
  display: flex;
  gap: 10px;
}

/* Video Containers */
.video-container {
  width: 100%;
  max-width: 180px;
  height: 290px;
  overflow: hidden;
  border-radius: 10px;
}

.tiktok-embed {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 10px;
}

/* Responsive */
@media (max-width: 767px) {
  .video-container {
    max-width: 154px;
    height: 248px;
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
    let position = 0;
    const slides = document.querySelector(".tiktok-slider");
    const slideWidth = document.querySelector(".tiktok-slide").offsetWidth + 10;

    window.scrollSlider = function(direction) {
        position += direction * slideWidth;
        slides.style.transform = `translateX(-${position}px)`;
    };
});
</script>


