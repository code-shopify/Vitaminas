<div
  class="t4s-section-inner contenedor vitatu-section shadow mb-3 d-flex align-items-center justify-content-center"
  style="background-color: {{ section.settings.background_color }}; padding: 30px 20px;"
>
  <div class="container">
    <div class="d-flex flex-wrap flex-md-nowrap justify-content-center align-items-center gap-4">
      
      <!-- Texto Personalizable -->
      <div class="text-left text-md-start">
        <h2 class="fw-bold section-title" style="color: {{ section.settings.text_color }};">
          {{ section.settings.text_main }}
        </h2>
      </div>

      <!-- Iconos Personalizables -->
      <div class="d-flex flex-wrap justify-content-center justify-content-md-between align-items-center gap-3">
        {% for i in (1..6) %}
          {% assign image_key = 'icon_' | append: i | append: '_image' %}
          {% assign text_key = 'icon_' | append: i | append: '_text' %}
          {% assign image = section.settings[image_key] %}
          {% assign text = section.settings[text_key] %}

          {% if image != blank or text != blank %}
            <div class="d-flex flex-column align-items-center icon-block text-center">
              {% if image != blank %}
                <img src="{{ image | img_url: 'auto' }}" class="img-fluid icon-img" alt="{{ text }}">
              {% endif %}
              <p class="fw-bold icon-text" style="color: {{ section.settings.text_color }};">
                {{ text }}
              </p>
            </div>
          {% endif %}
        {% endfor %}
      </div>

    </div>
  </div>
</div>

{% style %}
  .contenedor {
    max-width: 100%;
    overflow: hidden;
    text-align: center;
  }

  .section-title {
    font-size: clamp(18px, 2vw, 24px);
    margin-bottom: 10px;
  }

  /* Contenedor de icono y texto */
  .icon-block {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    align-items: center;
    min-width: 100px;
  }

  /* Asegurar que los iconos y textos estén en línea horizontal */
  .d-flex.flex-wrap {
    flex-wrap: wrap;
    gap: 20px;
  }

  .icon-img {
    max-width: 60px; /* Ajuste automático */
    height: auto;
  }

  .icon-text {
    font-size: clamp(12px, 1.5vw, 16px);
    max-width: 100%;
    margin-top: 5px;
    text-align: center;
  }

  @media (max-width: 767px) {
    .icon-img {
      max-width: 50px;
    }

    .icon-text {
      font-size: clamp(10px, 3vw, 16px);
    }
  }
{% endstyle %}

