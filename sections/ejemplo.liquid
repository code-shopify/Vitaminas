<div class="p-3 contenedor" style="background-color: {{ section.settings.background_color }}; height: 55px;">
  <div class="d-flex justify-content-between align-items-center mx-5">
    <div class="text-left ml-1 h1 texto-final">
      {{ section.settings.texto }}
    </div>
    <div class="mx-5 imagenes">
      <img width="20" height="20" alt="Imagen 1">
      <img width="20" height="20" alt="Imagen 2">
      <img width="20" height="20" alt="Imagen 3">
    </div>
  </div>
</div>

{% style %}
  /*---------------- Custom CSS for only desktop -------------------*/
  @media (min-width: 1025px) {
  }

  /*---------------- Custom CSS for tablet, mobile -------------------*/
  @media (max-width: 1024px) {
  }

  /*---------------- Custom CSS for only tablet -------------------*/
  @media (min-width: 768px) and (max-width: 1024px) {
  }

  /*---------------- Custom CSS for only mobile -------------------*/
  @media (max-width: 767px) {
    .imagenes {
      margin: 0;
    }

    .texto-final {
      font-size: 12px;
    }

    .contenedor {
      height: 30px;
    }
  }
{% endstyle %}

