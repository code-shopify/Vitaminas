<div
  class="t4s-section-inner contenedor-ejemplo vitatu-section shadow mb-1";>
  <div class="t4s-container h-100" style="background-color: {{ section.settings.background }};">
    <header>{{ section.settings.header }}</header>
  </div>
</div>
{% style %}
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (max-width: 1200px) {
    .container {
      max-width: 960px;
    }
  }

  @media (max-width: 992px) {
    .container {
      max-width: 720px;
    }
    .feature-card {
      padding: 20px;
    }
  }

  @media (max-width: 768px) {
    .container {
      max-width: 540px;
    }
    .feature-card {
      padding: 15px;
    }
  }

  @media (max-width: 576px) {
    .container {
      max-width: 100%;
      padding: 0 10px;
    }
    .feature-card {
      padding: 10px;
    }
  }
{% endstyle %}

{% schema %}
  {
    "name": "Insignias",
    "settings": [
      {
        "type": "text",
        "id": "header",
        "label": "Titulo",
      },
      {
        "type": "color",
        "id": "background",
        "label":"Color de fondo",
        "default":"#f3f5d7"
      }
    ]
  }
{% endschema %}
