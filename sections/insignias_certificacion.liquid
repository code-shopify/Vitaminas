<div class="t4s-section-inner vitatu-section contenedor">
  <div class="banner-img">
    <div class="text-dark p-5 titulo">
      <header class="fw-bold text-start" style="font-size: 45px;">
        {{ section.settings.header }}
      </header>
    </div>
    <div class="container text-dark text-center">
      <div class="row gap-5">
        <div class="row gap-4 gy-4">
          <div class="position-relative col-md-3 col-12 rounded-5 box">
            <div class="position-absolute top-0 start-50 translate-middle">
              <img src="{{ section.settings.image_box_1 | img_url: '100x100' }}" class="img-fluid" alt="icon_top">
            </div>
            <div class="lh-sm">
              <p class="fw-bold">{{ section.settings.box_1 }}</p>
              <p>{{ section.settings.box_content }}</p>
            </div>
          </div>
          <div class="position-relative col-md-3 col-12 rounded-5 box">
            <div class="position-absolute top-0 start-50 translate-middle">
              <img src="{{ section.settings.image_box_2 | img_url: '100x100' }}" class="img-fluid" alt="icon_top">
            </div>
            <div class="lh-sm">
              <p class="fw-bold">{{ section.settings.box_2 }}</p>
              <p>{{ section.settings.box_content_2 }}</p>
            </div>
          </div>
        </div>
        <div class="row gap-4 gy-4">
          <div class="position-relative col-md-3 col-12 rounded-5 box">
            <div class="position-absolute top-0 start-50 translate-middle">
              <img src="{{ section.settings.image_box_3 | img_url: '100x100' }}" class="img-fluid" alt="icon_top">
            </div>
            <div class="lh-sm">
              <p class="fw-bold">{{ section.settings.box_3 }}</p>
              <p>{{ section.settings.box_content_3 }}</p>
            </div>
          </div>
          <div class="position-relative col-md-3 col-12 rounded-5 box">
            <div class="position-absolute top-0 start-50 translate-middle">
              <img src="{{ section.settings.image_box_4 | img_url: '100x100' }}" class="img-fluid" alt="icon_top">
            </div>
            <div class="lh-sm">
              <p class="fw-bold">{{ section.settings.box_4 }}</p>
              <p>{{ section.settings.box_content_4 }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% style %}
  .banner-img {
  width: 100%;
  min-height: 688px; /* Usa min-height en lugar de height */
  background-color: #E5D4C9;
  background-image: url('{{ section.settings.banner | image_url: width: 1441, height: 688 }}');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  margin: auto;
}

.contenedor {
  overflow: hidden;
  width: 100%; /* Corregido: era "widht" */
  max-width: 1441px;
  margin: 0 auto;
}

.box {
  background-color: {{ section.settings.background_box }};
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px; /* Espacio entre cajas */
}

@media (max-width: 768px) {
  .banner-img {
    background-image: none;
    background-color: {{ section.settings.background_section }};
    background-image: linear-gradient(to bottom, rgba(255, 255, 255, 1), #E5D4C9);
    min-height: auto; /* Ajusta la altura en móviles */
    padding: 20px; /* Añade espacio interno */
  }

  .titulo header {
    font-size: 2rem; /* Reduce el tamaño del título en móviles */
  }

  .box {
    width: 100%; /* Las cajas ocupan el 100% del ancho en móviles */
    margin-bottom: 15px; /* Espacio entre cajas en móviles */
  }
}
{% endstyle %}
