<div
  class="t4s-section-inner contenedor-ejemplo vitatu-section shadow mb-1;" style="width: 1441px; height: 688px;">
  <div class="t4s-container h-100"">
    <div class="text-dark">
      <header class="fw-bold text-start" style="font-size: 45px; width: 665px; height:100px">{{ section.settings.header }}</header>
    </div>
  </div>
</div>
{% style %}
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (max-width: 1200px) {
    .container {
      max-width: 960px;
    }
  }

  @media (max-width: 992px) {
    .container {
      max-width: 720px;
    }
    .feature-card {
      padding: 20px;
    }
  }

  @media (max-width: 768px) {
    .container {
      max-width: 540px;
    }
    .feature-card {
      padding: 15px;
    }
  }

  @media (max-width: 576px) {
    .container {
      max-width: 100%;
      padding: 0 10px;
    }
    .feature-card {
      padding: 10px;
    }
  }
{% endstyle %}

{% schema %}
  {
    "name": "Insignias",
    "settings": [
      {
        "type": "text",
        "id": "header",
        "label": "Titulo"
      },
      {
        "type":"image_picker",
        "id":"banner",
        "label":"Imagen del banner"
      }
    ],
    "presets": [
      {
        "name": "Insignias"
      }
    ]
  }
{% endschema %}
