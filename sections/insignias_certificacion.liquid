<div class="t4s-section-inner vitatu-section contenedor">
  <div
    class="banner-img"
  >
    <img src="{{ section.settings.banner| image_url}}" alt="Icon">
    <div class="text-dark p-5">
      <header class="fw-bold text-start titulo">
        {{ section.settings.header }}
      </header>
    </div>
    <div class="text-dark text-center">
      <div class="row gap-5 tabla">
        <div class="row gap-4 gy-4 box">
          <div
            class="position-relative col-3 rounded-5 columna"
          >
            <div class="position-absolute top-0 start-50 translate-middle columna-img">
              <img src="{{ section.settings.image_box_1|img_url:'100x100'}};" class="img-fluid" alt="icon_top">
            </div>
            <div class="lh-sm">
              <p class="fw-bold">{{ section.settings.box_1 }}</p>
              <p>{{ section.settings.box_content }}</p>
            </div>
          </div>
          <div
            class="position-relative col-3 rounded-5 columna"
          >
            <div class="position-absolute top-0 start-50 translate-middle columna-img">
              <img src="{{ section.settings.image_box_2|img_url:'100x100'}};" class="img-fluid" alt="icon_top">
            </div>
            <div class="lh-sm">
              <p class="fw-bold">{{ section.settings.box_2 }}</p>
              <p>{{ section.settings.box_content_2 }}</p>
            </div>
          </div>
        </div>
        <div class="row gap-4 gy-4 box">
          <div
            class="position-relative col-3 rounded-5 columna"
          >
            <div class="position-absolute top-0 start-50 translate-middle columna-img">
              <img src="{{ section.settings.image_box_3|img_url:'100x100'}};" class="img-fluid" alt="icon_top">
            </div>
            <div class="lh-sm">
              <p class="fw-bold">{{ section.settings.box_3 }}</p>
              <p>{{ section.settings.box_content_3 }}</p>
            </div>
          </div>
          <div
            class="position-relative col-3 rounded-5 columna"
          >
            <div class="position-absolute top-0 start-50 translate-middle columna-img">
              <img src="{{ section.settings.image_box_4|img_url:'100x100'}};" class="img-fluid" alt="icon_top">
            </div>
            <div class="lh-sm">
              <p class="fw-bold">{{ section.settings.box_4 }}</p>
              <p>{{ section.settings.box_content_4 }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% style %}
  .banner-img {
    width: 1441px;
    height: 688px;
    background-image: none;
    background-image: linear-gradient(to right, rgba(255, 255, 255, 1), {{section.settings.background_section}});
  }
    .img-fluid {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
    .contenedor{
      overflow:hidden;
      widht:1441px;
      height:688px;
  }
  .titulo{
    font-size: 45px;
    line-height: 1.2;
    word-wrap: break-word
  }
  .columna{
    background-color: {{section.settings.background_box}};
    padding-top:45px;
    width: 20%;
  }
  .columna-img{
    width:100px;
    height:100px;
  }
    @media (max-width: 768px) {
    .banner-img {
      min-width: 390px;
      width:100%;
      max-height: 1063px;
      height:auto;
      margin-bottom: 50px;
      background-image:none; 
      background-image: linear-gradient(to bottom, rgba(255, 255, 255, 1), {{section.settings.background_section}});
    }
    .titulo{
      font-size: 30px !important;
      text-align: center !important;
      width: 100% !important
    }
    .columna{
      width: min-content;
    }
    
      .tabla{
        
      }
      .box{
        justify-content:center;
      }
  }
{% endstyle %}
