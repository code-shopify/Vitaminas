<div
  class="t4s-section-inner vitatu-section;"
  style="width: 100vw; min-height:688px; background-color:{{ section.settings.background}};"
>
  <div class="t4s-container h-100">
    <div class="text-dark">
      <header class="fw-bold text-start" style="font-size: 45px; max-width: 665px; height:auto">
        {{ section.settings.header }}
      </header>
    </div>
    <div class="container text-dark">
      <div class="row">
        <div class="col-6 col-sm-3" style="background-color:{{ section.settings.background_box_1}}">
          <flex>
            <header class="fw-bold">{{ section.settings.box_1 }}</header>
            <p>{{ section.settings.box_content }}</p>
          </flex>
        </div>
        <div class="col-6 col-sm-3">.col-6 .col-sm-3</div>

        <!-- Force next columns to break to new line -->
        <div class="w-100"></div>

        <div class="col-6 col-sm-3">.col-6 .col-sm-3</div>
        <div class="col-6 col-sm-3">.col-6 .col-sm-3</div>
      </div>
    </div>
  </div>
</div>
{% style %}
  .banner-img {
    width: 10%;
    max-height: 300px;
    object-fit: cover;
  }

  @media (max-width: 1200px) {
    .banner-img {
      max-height: 400px;
    }
  }

  @media (max-width: 992px) {
    .banner-img {
      max-height: 350px;
    }
  }

  @media (max-width: 768px) {
    .banner-img {
      max-height: 300px;
    }
  }

  @media (max-width: 576px) {
    .banner-img {
      max-height: 250px;
    }
  }
{% endstyle %}
