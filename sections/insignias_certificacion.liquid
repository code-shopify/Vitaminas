<div
  class="t4s-section-inner vitatu-section;" style="width: 100vw; min-height:688px; background-color:{{ section.settings.background}};">
  <div class="t4s-container h-100">
    <div class="text-dark">
      <header class="fw-bold text-start" style="font-size: 45px; max-width: 665px; height:auto">{{ section.settings.header }}</header>
    </div>
    <div>
      <img 
  srcset="
    {{ section.settings.banner | img_url: '200x200' }} 200w,
    {{ section.settings.banner | img_url: '400x400' }} 400w,
    {{ section.settings.banner | img_url: '800x800' }} 800w"
  sizes="(max-width: 576px) 200px, (max-width: 768px) 400px, 800px"
  src="{{ section.settings.banner | img_url: '800x800' }}"
  class="rounded float-end image_banner"
  alt="banner">
    </div>
  </div>
</div>
{% style %}
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (max-width: 1200px) {
    .container {
      max-width: 960px;
    }
  }

  @media (max-width: 992px) {
    .container {
      max-width: 720px;
    }
    .feature-card {
      padding: 20px;
    }
  }

  @media (max-width: 768px) {
    .container {
      max-width: 540px;
    }
    .feature-card {
      padding: 15px;
    }
  }

  @media (max-width: 576px) {
    .container {
      max-width: 100%;
      padding: 0 10px;
    }
    .feature-card {
      padding: 10px;
    }
  }
{% endstyle %}

{% schema %}
  {
    "name": "Insignias",
    "settings": [
      {
        "type": "text",
        "id": "header",
        "label": "Titulo"
      },
      {
        "type":"image_picker",
        "id":"banner",
        "label":"Imagen del banner"
      },
      {
        "type":"color",
        "id":"background",
        "label":"Color del Fondo:",
        "default": "#E5D4C9"
      }
    ],
    "presets": [
      {
        "name": "Insignias"
      }
    ]
  }
{% endschema %}
