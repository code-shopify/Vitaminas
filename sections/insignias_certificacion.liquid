<div class="t4s-section-inner vitatu-section conten">
  <div class="breadcrumbs">
    <a href="/">Home</a> &gt; <span>{{ section.settings.header }}</span>
  </div>
  <div class="stats-text">
    {{ section.settings.stats_text }}
  </div>
  <div class="container banner-img">
    <div class="text-dark p-5">
      <header class="fw-bold text-start titulo">
        {{ section.settings.header }}
      </header>
      <p class="subheader">{{ section.settings.subheader }}</p>
    </div>
    <div class="container text-dark text-center box">
      <div class="columna">
        <div class="columna-img">
          <img src="{{ section.settings.image_box_1 | img_url:'50x50' }}" alt="icon_top">
        </div>
        <p class="fw-bold">{{ section.settings.box_1 }}</p>
      </div>
      <div class="columna">
        <div class="columna-img">
          <img src="{{ section.settings.image_box_2 | img_url:'50x50' }}" alt="icon_top">
        </div>
        <p class="fw-bold">{{ section.settings.box_2 }}</p>
      </div>
      <div class="columna">
        <div class="columna-img">
          <img src="{{ section.settings.image_box_3 | img_url:'50x50' }}" alt="icon_top">
        </div>
        <p class="fw-bold">{{ section.settings.box_3 }}</p>
      </div>
      <div class="columna">
        <div class="columna-img">
          <img src="{{ section.settings.image_box_4 | img_url:'50x50' }}" alt="icon_top">
        </div>
        <p class="fw-bold">{{ section.settings.box_4 }}</p>
      </div>
    </div>
  </div>
</div>
{% style %}
.conten {
  background-color: {{ section.settings.background_section }};
  padding: 2rem 1rem;
}
.breadcrumbs {
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}
.stats-text {
  font-weight: bold;
  margin-bottom: 1rem;
  text-align: center;
}
.banner-img {
  width: 100%;
  height: auto;
}
.titulo {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
  text-transform: uppercase;
}
.subheader {
  font-size: 1.2rem;
  color: #666;
  margin-bottom: 1.5rem;
}
.box {
  display: flex;
  justify-content: center;
  gap: 2rem;
  flex-wrap: wrap;
}
.columna {
  background-color: {{ section.settings.background_box }};
  text-align: center;
  width: auto;
  padding: 1rem;
  border-radius: 0.5rem;
}
.columna-img {
  margin: 0 auto 0.5rem auto;
  width: 50px;
  height: 50px;
}
.columna-img img {
  width: 100%;
  height: auto;
}
@media (max-width: 768px) {
  .titulo {
    font-size: 1.8rem;
  }
  .subheader {
    font-size: 1rem;
  }
  .columna {
    width: 100%;
  }
}
{% endstyle %}
{% schema %}
{
  "name": "Insignias",
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Título principal",
      "default": "BEST SELLERS"
    },
    {
      "type": "text",
      "id": "subheader",
      "label": "Subtítulo",
      "default": "Calidad en cada ingrediente, diseñados pensando en ti."
    },
    {
      "type": "text",
      "id": "stats_text",
      "label": "Texto de estadísticas",
      "default": "+100,000 satisfacciones con su compra"
    },
    {
      "type": "color",
      "id": "background_section",
      "label": "Color de fondo de la sección",
      "default": "#F9EFDC"
    },
    {
      "type": "color",
      "id": "background_box",
      "label": "Color de fondo de las cajas",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "box_1",
      "label": "Texto caja 1",
      "default": "Formulado por especialistas en nutrición"
    },
    {
      "type": "image_picker",
      "id": "image_box_1",
      "label": "Icono caja 1"
    },
    {
      "type": "text",
      "id": "box_2",
      "label": "Texto caja 2",
      "default": "Integridad en nuestras fórmulas"
    },
    {
      "type": "image_picker",
      "id": "image_box_2",
      "label": "Icono caja 2"
    },
    {
      "type": "text",
      "id": "box_3",
      "label": "Texto caja 3",
      "default": "Hecho de Origen Español"
    },
    {
      "type": "image_picker",
      "id": "image_box_3",
      "label": "Icono caja 3"
    },
    {
      "type": "text",
      "id": "box_4",
      "label": "Texto caja 4",
      "default": "Seguimiento y acompañamiento post compra"
    },
    {
      "type": "image_picker",
      "id": "image_box_4",
      "label": "Icono caja 4"
    }
  ],
  "presets": [
    {
      "name": "Insignias"
    }
  ]
}
{% endschema %}


