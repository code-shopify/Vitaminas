<div
  class="t4s-section-inner contenedor vitatu-section shadow mb-3"
  style="background-color: {{ section.settings.background_color }}; padding: 10px 0; overflow: hidden;"
>
  <div class="container">
    <div class="marquee">
      <div class="marquee-content d-flex align-items-center gap-4">
        
        {% for i in (1..6) %}
          {% assign image_key = 'icon_' | append: i | append: '_image' %}
          {% assign text_key = 'icon_' | append: i | append: '_text' %}
          {% assign image = section.settings[image_key] %}
          {% assign text = section.settings[text_key] %}

          {% if image != blank or text != blank %}
            <div class="d-flex align-items-center icon-block">
              {% if image != blank %}
                <img src="{{ image | img_url: 'auto' }}" class="img-fluid icon-img me-2" alt="{{ text }}">
              {% endif %}
              <p class="fw-bold icon-text mb-0" style="color: {{ section.settings.text_color }};">
                {{ text }}
              </p>
            </div>
          {% endif %}
        {% endfor %}

        <!-- Duplicamos los elementos para un efecto de bucle -->
        {% for i in (1..6) %}
          {% assign image_key = 'icon_' | append: i | append: '_image' %}
          {% assign text_key = 'icon_' | append: i | append: '_text' %}
          {% assign image = section.settings[image_key] %}
          {% assign text = section.settings[text_key] %}

          {% if image != blank or text != blank %}
            <div class="d-flex align-items-center icon-block">
              {% if image != blank %}
                <img src="{{ image | img_url: 'auto' }}" class="img-fluid icon-img me-2" alt="{{ text }}">
              {% endif %}
              <p class="fw-bold icon-text mb-0" style="color: {{ section.settings.text_color }};">
                {{ text }}
              </p>
            </div>
          {% endif %}
        {% endfor %}

      </div>
    </div>
  </div>
</div>

{% style %}
  .contenedor {
    max-width: 100%;
    text-align: center;
  }

  /* MARQUEE - Animaci칩n infinita */
  .marquee {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    width: 100%;
  }

  .marquee-content {
    display: flex;
    gap: 20px;
    flex-wrap: nowrap;
    animation: marquee-scroll 15s linear infinite;
    min-width: 200%;
  }

  @keyframes marquee-scroll {
    from {
      transform: translateX(0%);
    }
    to {
      transform: translateX(-50%);
    }
  }

  /* Ajuste de iconos y textos */
  .icon-block {
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  .icon-img {
    max-width: 24px;
    height: auto;
  }

  .icon-text {
    font-size: 14px;
    text-align: left;
  }

  @media (max-width: 767px) {
    .icon-img {
      max-width: 20px;
    }

    .icon-text {
      font-size: 12px;
    }

    .marquee-content {
      animation-duration: 20s;
    }
  }
{% endstyle %}

