<div
  class="t4s-section-inner contenedor vitatu-section shadow mb-3 d-flex align-items-center justify-content-center"
  style="background-color: {{ section.settings.background_color }}; padding: 10px 0;"
>
  <div class="container">
    <div class="d-flex flex-wrap justify-content-center align-items-center gap-4">

      <!-- Iconos Personalizables -->
      {% for i in (1..6) %}
        {% assign image_key = 'icon_' | append: i | append: '_image' %}
        {% assign text_key = 'icon_' | append: i | append: '_text' %}
        {% assign image = section.settings[image_key] %}
        {% assign text = section.settings[text_key] %}

        {% if image != blank or text != blank %}
          <div class="d-flex flex-column align-items-center icon-block text-center">
            {% if image != blank %}
              <img src="{{ image | img_url: 'auto' }}" class="img-fluid icon-img" alt="{{ text }}">
            {% endif %}
            <p class="fw-bold icon-text" style="color: {{ section.settings.text_color }};">
              {{ text }}
            </p>
          </div>
        {% endif %}
      {% endfor %}

    </div>
  </div>
</div>

{% style %}
  .contenedor {
    max-width: 100%;
    overflow: hidden;
    text-align: center;
  }

  /* Asegurar que los iconos y textos estén en una sola línea */
  .d-flex.flex-wrap {
    flex-wrap: nowrap;
    justify-content: center;
    gap: 20px;
  }

  .icon-block {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    align-items: center;
  }

  .icon-img {
    max-width: 40px; /* Tamaño de los iconos */
    height: auto;
  }

  .icon-text {
    font-size: 12px;
    max-width: 100%;
    margin-top: 5px;
    text-align: center;
    white-space: nowrap; /* Evita que el texto se divida en dos líneas */
  }

  @media (max-width: 767px) {
    .d-flex.flex-wrap {
      flex-wrap: wrap; /* Permite que los iconos bajen de línea en pantallas pequeñas */
    }

    .icon-img {
      max-width: 35px;
    }

    .icon-text {
      font-size: 10px;
    }
  }
{% endstyle %}

