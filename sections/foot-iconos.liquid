<div
  class="t4s-section-inner contenedor vitatu-section shadow mb-3"
  style="background-color: {{ section.settings.background_color }};"
>
  <div class="container py-3">
    <div class="row justify-content-center text-center">
      
      {% for block in section.blocks %}
        <div class="col-6 col-md-2" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: '100x' }}" class="img-fluid mb-2" alt="{{ block.settings.text }}">
          {% endif %}
          <p class="fw-bold">{{ block.settings.text }}</p>
        </div>
      {% endfor %}

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Sección de Iconos",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#DDE066"
    }
  ],
  "blocks": [
    {
      "type": "icon_block",
      "name": "Icono",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen del icono"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Texto del icono",
          "default": "Texto de ejemplo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sección de Iconos",
      "category": "Custom"
    }
  ]
}
{% endschema %}
