<div
  class="t4s-section-inner contenedor vitatu-section shadow mb-3 d-flex align-items-center justify-content-center"
  style="background-color: {{ section.settings.background_color }}; padding: 30px 0;"
>
  <div class="container">
    <div class="row justify-content-center align-items-center text-center">
      
      {% assign empty_section = true %}  <!-- Variable para comprobar si hay contenido -->

      {% for i in (1..6) %}
        {% assign image_key = 'icon_' | append: i | append: '_image' %}
        {% assign text_key = 'icon_' | append: i | append: '_text' %}
        {% assign image = section.settings[image_key] %}
        {% assign text = section.settings[text_key] %}

        {% if image != blank %}
          {% assign empty_section = false %}
          <div class="col-6 col-md-2 d-flex flex-column align-items-center justify-content-center icon-block">
            <img src="{{ image | img_url: 'auto' }}" class="img-fluid mb-2 icon-img" alt="{{ text }}">
            <p class="fw-bold icon-text" style="color: {{ section.settings.text_color }};">{{ text }}</p>
          </div>
        {% endif %}
      {% endfor %}

      {% if empty_section %}
        <p class="text-center fw-bold" style="color: {{ section.settings.text_color }};">游댒 Agrega iconos desde el editor de temas.</p>
      {% endif %}

    </div>
  </div>
</div>

{% style %}
  /* Asegurar que la secci칩n se mantenga dentro de los l칤mites */
  .contenedor {
    max-width: 100%;
    overflow: hidden;
    padding: 20px 0;
    text-align: center;
  }

  /* Bloques de iconos con texto alineado */
  .icon-block {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    align-items: center;
    width: 100%; /* Ajusta autom치ticamente el tama침o */
  }

  /* Tama침o del icono adaptable */
  .icon-img {
    max-width: 15%; /* Se adapta al tama침o de la secci칩n */
    height: auto;
    display: block;
  }

  /* Tama침o del texto adaptable */
  .icon-text {
    font-size: clamp(12px, 1.5vw, 18px); /* Tama침o din치mico entre 12px y 18px */
    text-align: center;
    margin-top: 5px;
    word-wrap: break-word;
    max-width: 90%;
  }

  @media (max-width: 767px) {
    .icon-img {
      max-width: 20%; /* Se ajusta mejor en m칩viles */
    }

    .icon-text {
      font-size: clamp(10px, 3vw, 16px); /* Texto m치s adaptable en m칩viles */
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Secci칩n de Iconos",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#DDE066"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Secci칩n de Iconos",
      "category": "Custom"
    }
  ]
}
{% endschema %}

