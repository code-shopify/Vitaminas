<div
  class="t4s-section-inner contenedor vitatu-section shadow mb-3 d-flex align-items-center justify-content-center"
  style="background-color: {{ section.settings.background_color }}; padding: 30px 0;"
>
  <div class="container">
    <div class="row justify-content-center align-items-center text-center">
      
      {% for i in (1..6) %}
        {% assign image_key = 'icon_' | append: i | append: '_image' %}
        {% assign text_key = 'icon_' | append: i | append: '_text' %}
        {% assign image = section.settings[image_key] %}
        {% assign text = section.settings[text_key] %}

        <div class="col-6 col-md-2 d-flex flex-column align-items-center justify-content-center icon-block">
          {% if image != blank %}
            <img src="{{ image | img_url: '150x150' }}" class="img-fluid mb-2 icon-img" alt="{{ text }}">
          {% endif %}
          <p class="fw-bold text-white icon-text">{{ text }}</p>
        </div>
      {% endfor %}

    </div>
  </div>
</div>

{% style %}
  /* Evitar que el contenido se salga de la sección */
  .contenedor {
    max-width: 100%;
    overflow: hidden; /* Previene el desbordamiento */
    padding: 20px 0;
  }

  /* Asegurar que los iconos y textos estén centrados */
  .icon-block {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    align-items: center;
    min-height: 120px; /* Garantiza que cada bloque tenga espacio */
  }

  .icon-img {
    max-width: 80px; /* Tamaño controlado de iconos */
    height: auto;
    display: block;
  }

  .icon-text {
    font-size: 14px;
    text-align: center;
    margin-top: 5px;
    word-wrap: break-word; /* Asegura que el texto no se salga */
    max-width: 90%;
  }

  /* Asegurar contraste y visibilidad en fondos oscuros */
  .contenedor {
    color: #ffffff;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }

  @media (max-width: 767px) {
    .icon-img {
      max-width: 60px;
    }

    .icon-text {
      font-size: 12px;
      max-width: 100%;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Sección de Iconos",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#DDE066"
    }
  ],
  "presets": [
    {
      "name": "Sección de Iconos",
      "category": "Custom"
    }
  ]
}
{% endschema %}
