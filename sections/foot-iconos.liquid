<div
  class="t4s-section-inner contenedor vitatu-section shadow mb-3"
  style="background-color: {{ section.settings.background_color }};"
>
  <div class="container py-3">
    <div class="row justify-content-center text-center">
      
      <div class="col-6 col-md-2">
        {% if section.settings.icon_1_image != blank %}
          <img src="{{ section.settings.icon_1_image | img_url: '100x' }}" class="img-fluid mb-2" alt="{{ section.settings.icon_1_text }}">
        {% endif %}
        <p class="fw-bold">{{ section.settings.icon_1_text }}</p>
      </div>

      <div class="col-6 col-md-2">
        {% if section.settings.icon_2_image != blank %}
          <img src="{{ section.settings.icon_2_image | img_url: '100x' }}" class="img-fluid mb-2" alt="{{ section.settings.icon_2_text }}">
        {% endif %}
        <p class="fw-bold">{{ section.settings.icon_2_text }}</p>
      </div>

      <div class="col-6 col-md-2">
        {% if section.settings.icon_3_image != blank %}
          <img src="{{ section.settings.icon_3_image | img_url: '100x' }}" class="img-fluid mb-2" alt="{{ section.settings.icon_3_text }}">
        {% endif %}
        <p class="fw-bold">{{ section.settings.icon_3_text }}</p>
      </div>

      <div class="col-6 col-md-2">
        {% if section.settings.icon_4_image != blank %}
          <img src="{{ section.settings.icon_4_image | img_url: '100x' }}" class="img-fluid mb-2" alt="{{ section.settings.icon_4_text }}">
        {% endif %}
        <p class="fw-bold">{{ section.settings.icon_4_text }}</p>
      </div>

      <div class="col-6 col-md-2">
        {% if section.settings.icon_5_image != blank %}
          <img src="{{ section.settings.icon_5_image | img_url: '100x' }}" class="img-fluid mb-2" alt="{{ section.settings.icon_5_text }}">
        {% endif %}
        <p class="fw-bold">{{ section.settings.icon_5_text }}</p>
      </div>

      <div class="col-6 col-md-2">
        {% if section.settings.icon_6_image != blank %}
          <img src="{{ section.settings.icon_6_image | img_url: '100x' }}" class="img-fluid mb-2" alt="{{ section.settings.icon_6_text }}">
        {% endif %}
        <p class="fw-bold">{{ section.settings.icon_6_text }}</p>
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Sección de Iconos",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#DDE066"
    },
    {
      "type": "image_picker",
      "id": "icon_1_image",
      "label": "Primera Imagen"
    },
    {
      "type": "text",
      "id": "icon_1_text",
      "label": "Texto 1",
      "default": "Sin Saborizantes Artificiales"
    },
    {
      "type": "image_picker",
      "id": "icon_2_image",
      "label": "Segunda Imagen"
    },
    {
      "type": "text",
      "id": "icon_2_text",
      "label": "Texto 2",
      "default": "Sin Lácteos"
    },
    {
      "type": "image_picker",
      "id": "icon_3_image",
      "label": "Tercera Imagen"
    },
    {
      "type": "text",
      "id": "icon_3_text",
      "label": "Texto 3",
      "default": "Sin Soya"
    },
    {
      "type": "image_picker",
      "id": "icon_4_image",
      "label": "Cuarta Imagen"
    },
    {
      "type": "text",
      "id": "icon_4_text",
      "label": "Texto 4",
      "default": "Sin Gluten"
    },
    {
      "type": "image_picker",
      "id": "icon_5_image",
      "label": "Quinta Imagen"
    },
    {
      "type": "text",
      "id": "icon_5_text",
      "label": "Texto 5",
      "default": "Sin Colorantes"
    },
    {
      "type": "image_picker",
      "id": "icon_6_image",
      "label": "Sexta Imagen"
    },
    {
      "type": "text",
      "id": "icon_6_text",
      "label": "Texto 6",
      "default": "Sin Endulzantes Artificiales"
    }
  ],
  "presets": [
    {
      "name": "Sección de Iconos",
      "category": "Custom"
    }
  ]
}
{% endschema %}
