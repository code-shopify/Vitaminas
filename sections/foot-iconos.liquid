{% style %}
  /* Asegurar que el contenedor ocupe todo el ancho */
.t4s-section-inner {
    width: 100%;
    max-width: 100%;
}

/* Asegurar que los iconos y textos estén alineados correctamente */
.icon-block {
    display: flex;
    align-items: center;
    justify-content: center; /* Centra el contenido horizontalmente */
    flex-wrap: nowrap;
    gap: 8px; /* Espacio entre el icono y el texto */
}

/* Ajuste del contenedor para ocupar todo el ancho */
.container {
    width: 100%;
    max-width: 100%;
    padding: 0 20px; /* Agregar un pequeño padding lateral */
}

/* Ajustar tamaño de iconos y texto */
.icon-img {
    max-width: 30px; /* Ajusta el tamaño de los iconos */
    height: auto;
}

/* Ajuste para que el texto no se expanda a todo el ancho */
.icon-text {
    font-size: 16px;
    text-align: center;
    margin: 0;
    max-width: fit-content; /* Evita que el texto se expanda en full-width */
    display: inline-block; /* Asegura que el texto respete su tamaño natural */
}

  /*---------------- Custom CSS for only desktop -------------------*/
  @media (min-width: 1025px) {
      /* Versión de escritorio: los iconos y textos se muestran de forma estática */
  .marquee-desktop {
    display: flex;
    justify-content: center;
    gap: 20px;
  }
     .marquee-mobile {
    display: none;
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    width: 100%;
  }
  }

  /*---------------- Custom CSS for tablet, mobile -------------------*/
  @media (max-width: 1024px) {
      .marquee-desktop {
        display: none !important;
      }
  }

  /*---------------- Custom CSS for only tablet -------------------*/
  @media (min-width: 768px) and (max-width: 1024px) {
  }

  /*---------------- Custom CSS for only mobile -------------------*/
  @media (max-width: 767px) {
    .contenedor {
      height: 30px;
    }

    .marquee-mobile{
      font-size: 5px;
    }
  }

  .marquee-content {
    display: flex;
    gap: 30px;
    flex-wrap: nowrap;
    animation: marquee-scroll 12s linear infinite;
    min-width: 200%;
  }

  @keyframes marquee-scroll {
    from {
      transform: translateX(0%);
    }
    to {
      transform: translateX(-50%);
    }
  }
  
{% endstyle %}


