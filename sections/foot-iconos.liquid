<div
  class="t4s-section-inner contenedor vitatu-section shadow mb-3 d-flex align-items-center justify-content-center"
  style="background-color: {{ section.settings.background_color }}; padding: 30px 0;"
>
  <div class="container">
    <div class="row justify-content-center align-items-center text-center">
      
      {% assign empty_section = true %}  <!-- Variable para comprobar si hay contenido -->

      {% for i in (1..6) %}
        {% assign image_key = 'icon_' | append: i | append: '_image' %}
        {% assign text_key = 'icon_' | append: i | append: '_text' %}
        {% assign image = section.settings[image_key] %}
        {% assign text = section.settings[text_key] %}

        {% if image != blank %}
          {% assign empty_section = false %}
          <div class="col-6 col-md-2 d-flex flex-column align-items-center justify-content-center icon-block">
            <img src="{{ image | img_url: '150x150' }}" class="img-fluid mb-2 icon-img" alt="{{ text }}">
            <p class="fw-bold text-white icon-text">{{ text }}</p>
          </div>
        {% endif %}
      {% endfor %}

      {% if empty_section %}
        <p class="text-center text-white">ðŸ”” Agrega iconos desde el editor de temas.</p>
      {% endif %}

    </div>
  </div>
</div>

{% style %}
  .contenedor {
    max-width: 100%;
    overflow: hidden;
    padding: 20px 0;
    text-align: center;
  }

  .icon-block {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    align-items: center;
    min-height: 120px;
  }

  .icon-img {
    max-width: 80px;
    height: auto;
    display: block;
  }

  .icon-text {
    font-size: 14px;
    text-align: center;
    margin-top: 5px;
    word-wrap: break-word;
    max-width: 90%;
  }

  .contenedor {
    color: #ffffff;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }

  @media (max-width: 767px) {
    .icon-img {
      max-width: 60px;
    }

    .icon-text {
      font-size: 12px;
      max-width: 100%;
    }
  }
{% endstyle %}

