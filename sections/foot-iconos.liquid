<div
  class="t4s-section-inner contenedor vitatu-section align-items-center d-flex"
  style="background-color: {{ section.settings.background_color }}; overflow: hidden; height:77px;"
>
  <div class="container">

    <!-- Contenedor normal para escritorio -->
    <div class="d-flex justify-content-between align-items-center gap-4 marquee-desktop">
      {% for i in (1..6) %}
        {% assign image_key = 'icon_' | append: i | append: '_image' %}
        {% assign text_key = 'icon_' | append: i | append: '_text' %}
        {% assign image = section.settings[image_key] %}
        {% assign text = section.settings[text_key] %}

        {% if image != blank or text != blank %}
          <div class="d-flex align-items-center icon-block">
            {% if image != blank %}
              <img src="{{ image | img_url: 'auto' }}" class="img-fluid icon-img me-2" alt="{{ text }}">
            {% endif %}
            <p class="fw-bold icon-text" style="color: {{ section.settings.text_color }};">
              {{ text }}
            </p>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Marquee solo para móviles -->
    <div class="marquee-mobile">
      <div class="marquee-content d-flex align-items-center">
        {% for i in (1..6) %}
          {% assign image_key = 'icon_' | append: i | append: '_image' %}
          {% assign text_key = 'icon_' | append: i | append: '_text' %}
          {% assign image = section.settings[image_key] %}
          {% assign text = section.settings[text_key] %}

          {% if image != blank or text != blank %}
            <div class="d-flex align-items-center icon-block">
              {% if image != blank %}
                <img src="{{ image | img_url: 'auto' }}" class="img-fluid icon-img me-2" alt="{{ text }}">
              {% endif %}
              <p class="fw-bold icon-text align-items-center" style="color: {{ section.settings.text_color }};">
                {{ text }}
              </p>
            </div>
          {% endif %}
        {% endfor %}

        <!-- Se repite el contenido para efecto continuo -->
        {% for i in (1..6) %}
          {% assign image_key = 'icon_' | append: i | append: '_image' %}
          {% assign text_key = 'icon_' | append: i | append: '_text' %}
          {% assign image = section.settings[image_key] %}
          {% assign text = section.settings[text_key] %}

          {% if image != blank or text != blank %}
            <div class="d-flex align-items-center icon-block marquee-mobile">
              {% if image != blank %}
                <img src="{{ image | img_url: 'auto' }}" class="img-fluid icon-img me-2" alt="{{ text }}">
              {% endif %}
              <p class="fw-bold icon-text mb-0" style="color: {{ section.settings.text_color }};">
                {{ text }}
              </p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

  </div>
</div>


{% style %}
  /* Asegurar que el contenedor ocupe todo el ancho */
.t4s-section-inner {
    width: 100%;
    max-width: 100%;
}

/* Asegurar que los iconos y textos estén alineados correctamente */
.icon-block {
    display: flex;
    align-items: center;
    justify-content: center; /* Centra el contenido horizontalmente */
    flex-wrap: nowrap;
    gap: 8px; /* Espacio entre el icono y el texto */
}

/* Ajuste del contenedor para ocupar todo el ancho */
.container {
    width: 100%;
    max-width: 100%;
    padding: 0 20px; /* Agregar un pequeño padding lateral */
}

/* Ajustar tamaño de iconos y texto */
.icon-img {
    max-width: 30px; /* Ajusta el tamaño de los iconos */
    height: auto;
}

.icon-text {
    font-size: 16px; /* Ajusta el tamaño del texto */
    text-align: center; /* Asegurar que el texto esté alineado */
    margin: 0;
}


    /*---------------- Custom CSS for only desktop -------------------*/
@media (min-width: 1025px) {
    .marquee-desktop {
        display: flex;
        justify-content: space-around; /* Espacia los elementos uniformemente */
        width: 100%;
        gap: 20px;
    
     .marquee-mobile {
    display: none;
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    width: 100%;
  }
}

  /*---------------- Custom CSS for tablet, mobile -------------------*/
 @media (max-width: 1024px) {
      .marquee-desktop {
        display: none !important;
      }

}

  /*---------------- Custom CSS for only tablet -------------------*/
  @media (min-width: 768px) and (max-width: 1024px) {
     
  }

  /*---------------- Custom CSS for only mobile -------------------*/
  @media (max-width: 767px) {

}
    .marquee-content {
        display: flex;
        justify-content: space-around;
        width: 200%;
        animation: marquee-scroll 12s linear infinite;
        min-width: 200%;
    }

  @keyframes marquee-scroll {
    from {
      transform: translateX(0%);
    }
    to {
      transform: translateX(-50%);
    }
  }

  /* Ajuste de iconos y textos */
  .icon-block {
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  .icon-img {
    max-width: 24px;
    height: auto;
  }

  .icon-text {
    font-size: 14px;
    text-align: left;
  }

{% endstyle %}

