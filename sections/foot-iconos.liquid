<!-- Contenedor principal -->
<div class="t4s-section-inner contenedor vitatu-section align-items-center d-flex" 
     style="background-color: {{ section.settings.background_color }}; overflow: hidden; height:77px;">
  
  <div class="container">
    
    <!-- Swiper Slider -->
    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        
        {% for i in (1..6) %}
          {% assign image_key = 'icon_' | append: i | append: '_image' %}
          {% assign text_key = 'icon_' | append: i | append: '_text' %}
          {% assign image = section.settings[image_key] %}
          {% assign text = section.settings[text_key] %}

          {% if image != blank or text != blank %}
            <div class="swiper-slide d-flex align-items-center icon-block">
              {% if image != blank %}
                <img src="{{ image | img_url: 'auto' }}" class="img-fluid icon-img me-2" alt="{{ text }}">
              {% endif %}
              <p class="fw-bold icon-text" style="color: {{ section.settings.text_color }};">
                {{ text }}
              </p>
            </div>
          {% endif %}
        {% endfor %}
        
      </div>
    </div>

  </div>
</div>

<!-- Swiper.js Styles -->
{% style %}
  .swiper {
      width: 100%;
      height: 100%;
  }

  .swiper-wrapper {
      display: flex;
      align-items: center;
  }

  .swiper-slide {
      display: flex;
      align-items: center;
      justify-content: center;
      white-space: nowrap;
  }

  .icon-block {
      display: flex;
      align-items: center;
      gap: 8px;
  }

  .icon-img {
      max-width: 30px;
      height: auto;
  }

  .icon-text {
      font-size: 16px;
      text-align: center;
      margin: 0;
      white-space: nowrap; /* Evita que el texto haga saltos de línea */
  }
{% endstyle %}

<!-- Swiper.js Script -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    var swiper = new Swiper(".mySwiper", {
      slidesPerView: "auto",
      spaceBetween: 20,
      loop: true, // Loop infinito
      autoplay: {
        delay: 2000, // Velocidad de desplazamiento
        disableOnInteraction: false, // Sigue deslizando después de interactuar
      },
      speed: 3000, // Velocidad de transición
    });
  });
</script>

