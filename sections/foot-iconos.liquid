<div
  class="t4s-section-inner contenedor vitatu-section shadow mb-3 d-flex align-items-center justify-content-center"
  style="background-color: {{ section.settings.background_color }}; padding: 30px 0;"
>
  <div class="container">
    <div class="row justify-content-center align-items-center text-center">

      {% assign has_content = false %}

      {% for i in (1..6) %}
        {% assign image_key = 'icon_' | append: i | append: '_image' %}
        {% assign text_key = 'icon_' | append: i | append: '_text' %}
        {% assign image = section.settings[image_key] %}
        {% assign text = section.settings[text_key] %}

        {% if image != blank %}
          {% assign has_content = true %}
          <div class="col-6 col-md-2 d-flex flex-column align-items-center justify-content-center icon-block">
            <img src="{{ image | img_url: 'auto' }}" class="img-fluid mb-2 icon-img" alt="{{ text }}">
            <p class="fw-bold icon-text" style="color: {{ section.settings.text_color }};">{{ text }}</p>
          </div>
        {% endif %}
      {% endfor %}

    </div>
  </div>
</div>

{% style %}
  /* Evitar que la sección desborde */
  .contenedor {
    max-width: 100%;
    overflow: hidden;
    padding: 20px 0;
    text-align: center;
  }

  /* Asegurar que los iconos y textos estén bien alineados */
  .icon-block {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  /* Tamaño adaptable de iconos */
  .icon-img {
    max-width: 80px; /* Se ajusta automáticamente */
    height: auto;
  }

  /* Tamaño adaptable de texto */
  .icon-text {
    font-size: clamp(12px, 1.5vw, 18px); /* Escalado según tamaño de pantalla */
    text-align: center;
    margin-top: 5px;
    word-wrap: break-word;
    max-width: 90%;
  }

  @media (max-width: 767px) {
    .icon-img {
      max-width: 60px; /* Se reduce en móviles */
    }

    .icon-text {
      font-size: clamp(10px, 3vw, 16px);
    }
  }
{% endstyle %}

