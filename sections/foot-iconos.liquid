<div
  class="t4s-section-inner contenedor vitatu-section align-items-center d-flex"
  style="background-color: {{ section.settings.background_color }}; overflow: hidden; height:77px; width:100%;"
>
  <div class="container">

    <!-- Contenedor normal para escritorio -->
    <div class="d-flex justify-content-between align-items-center gap-4 marquee-desktop">
      {% for i in (1..6) %}
        {% assign image_key = 'icon_' | append: i | append: '_image' %}
        {% assign text_key = 'icon_' | append: i | append: '_text' %}
        {% assign image = section.settings[image_key] %}
        {% assign text = section.settings[text_key] %}

        {% if image != blank or text != blank %}
          <div class="d-flex align-items-center icon-block">
            {% if image != blank %}
              <img src="{{ image | img_url: 'auto' }}" class="img-fluid icon-img me-2" alt="{{ text }}">
            {% endif %}
            <p class="fw-bold icon-text" style="color: {{ section.settings.text_color }};">
              {{ text }}
            </p>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Marquee para móviles y tablets -->
    <div class="marquee-mobile">
      <div class="marquee-content d-flex align-items-center">
        {% for i in (1..6) %}
          {% assign image_key = 'icon_' | append: i | append: '_image' %}
          {% assign text_key = 'icon_' | append: i | append: '_text' %}
          {% assign image = section.settings[image_key] %}
          {% assign text = section.settings[text_key] %}

          {% if image != blank or text != blank %}
            <div class="d-flex align-items-center icon-block">
              {% if image != blank %}
                <img src="{{ image | img_url: 'auto' }}" class="img-fluid icon-img me-2" alt="{{ text }}">
              {% endif %}
              <p class="fw-bold icon-text align-items-center" style="color: {{ section.settings.text_color }};">
                {{ text }}
              </p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

  </div>
</div>

{% style %}
  /* Asegurar que el contenedor ocupe todo el ancho */
  .t4s-section-inner {
      width: 100%;
      max-width: 100%;
  }

  .container {
      width: 100%;
      max-width: 100%;
      padding: 0 20px; /* Agregar un pequeño padding lateral */
  }

  /* Asegurar alineación correcta de iconos y texto */
  .icon-block {
      display: flex;
      align-items: center;
      justify-content: center; /* Centra los iconos y textos */
      gap: 8px; /* Espacio entre icono y texto */
      white-space: nowrap;
  }

  .icon-img {
      max-width: 24px;
      height: auto;
  }

  .icon-text {
      font-size: 14px;
      text-align: left;
      margin: 0;
  }

  /* Estilos específicos para escritorio */
  @media (min-width: 1025px) {
      .marquee-desktop {
          display: flex;
          justify-content: space-around; /* Distribución uniforme */
          width: 100%;
      }
      .marquee-mobile {
          display: none; /* Oculta marquee en escritorio */
      }
  }

  /* Estilos para móviles y tablets */
  @media (max-width: 1024px) {
      .marquee-desktop {
          display: none !important;
      }

      .marquee-mobile {
          display: flex;
          width: 100%;
          overflow: hidden;
          white-space: nowrap;
          position: relative;
      }

      .marquee-content {
          display: flex;
          align-items: center;
          justify-content: space-around;
          width: 200%;
          animation: marquee-scroll 10s linear infinite;
      }
  }

  /* Animación optimizada para evitar reinicios abruptos */
  @keyframes marquee-scroll {
      from {
          transform: translateX(0%);
      }
      to {
          transform: translateX(-100%);
      }
  }
{% endstyle %}

