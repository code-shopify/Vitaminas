<section class="shipping-info-section">
  <ul class="shipping-info-list">
    {% for block in section.blocks %}
      <li>
        {% if block.settings.icon_image != blank %}
          <img src="{{ block.settings.icon_image | image_url }}" alt="Ícono">
        {% endif %}
        <span>{{ block.settings.feature_text }}</span>
      </li>
    {% endfor %}
  </ul>
</section>

{% style %}
    .shipping-info-section {
    background-color: #f9f3eb; /* Color de fondo similar a la imagen */
    padding: 15px 20px;
    border-radius: 8px;
    max-width: 600px; /* Ancho limitado para parecerse a la imagen */
    margin: auto;
  }

  .shipping-info-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .shipping-info-list li {
    display: flex;
    align-items: center;
    font-size: 14px;
    color: #635d57; /* Color de texto similar */
    margin-bottom: 8px;
  }

  .shipping-info-list img {
    width: 24px; /* Tamaño ajustado para los íconos */
    height: 24px;
    margin-right: 10px;
    object-fit: contain;
  }
{% endstyle %}

