<section class="shipping-info-section py-4">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <!-- Título -->
        <h2>{{ section.settings.title }}</h2>
        <!-- Descripción -->
        <p>{{ section.settings.description }}</p>

        <!-- Características -->
        <ul class="list-unstyled d-flex flex-column gap-3">
          {% for block in section.blocks %}
            <li class="d-flex align-items-center">
              <span class="me-2" style="font-size: 1.5em;">{{ block.settings.icon }}</span> 
              <span>{{ block.settings.text }}</span>
            </li>
          {% endfor %}
        </ul>

        <!-- Imagenes Opcionales -->
        <div class="d-flex justify-content-between mt-4">
          {% if section.settings.left_image != blank %}
            <img src="{{ section.settings.left_image | image_url }}" alt="Imagen izquierda" class="img-fluid" style="max-width: 150px;">
          {% endif %}
          {% if section.settings.right_image != blank %}
            <img src="{{ section.settings.right_image | image_url }}" alt="Imagen derecha" class="img-fluid" style="max-width: 150px;">
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Información de Envío",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Imagen izquierda"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Imagen derecha"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Beneficios de tu compra"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Aprovecha nuestras ofertas y beneficios exclusivos al comprar con nosotros."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Característica",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Ícono (emoji o HTML)",
          "default": "🚚"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Texto de la característica",
          "default": "Envío gratis en compras arriba de $1,299"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Información de Envío",
      "category": "Marketing",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "🚚",
            "text": "Envío gratis en compras arriba de $1,299"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "🔒",
            "text": "Compra cifrada y segura"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "📦",
            "text": "Entrega garantizada de 3 a 6 días hábiles"
          }
        }
      ]
    }
  ]
}
{% endschema %}
