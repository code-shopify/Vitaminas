<section class="shipping-info-section py-4">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <ul class="list-unstyled d-flex flex-column gap-2">
          {% for block in section.blocks %}
            <li class="d-flex align-items-center">
              <span class="me-2">{{ block.settings.icon }}</span> 
              <span>{{ block.settings.text }}</span>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "sellos",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Característica",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Ícono (puede ser emoji o HTML)",
          "default": "🚚"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Texto de la característica",
          "default": "Envío gratis en compras arriba de $1,299"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Información de Envío",
      "category": "Texto",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "🚚",
            "text": "Envío gratis en compras arriba de $1,299"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "🔒",
            "text": "Compra cifrada y segura"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "📦",
            "text": "Entrega garantizada de 3 a 6 días hábiles"
          }
        }
      ]
    }
  ]
}
{% endschema %}

