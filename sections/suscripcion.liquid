{% schema %}
{
  "name": "Suscripción",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Imagen izquierda"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Imagen derecha"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "¡SUSCRÍBETE Y RECIBE UN 10% OFF!"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Disfruta de promociones, acceso preferencial a nuevos productos, noticias y mucho más."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Texto del campo de correo",
      "default": "Correo electrónico"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Suscribirme"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Color del botón",
      "default": "#A02D76"
    }
  ],
  "presets": [
    {
      "name": "Suscripción",
      "category": "Marketing"
    }
  ]
}
{% endschema %}

<div class="subscription-section">
  <div class="subscription-container">
    <div class="subscription-image">
      {% if section.settings.left_image != blank %}
        <img src="{{ section.settings.left_image | img_url: 'large' }}" alt="Imagen izquierda">
      {% endif %}
    </div>
    
    <div class="subscription-content">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.description }}</p>

      {%- form 'customer', class: 'newsletter-form' -%}
        <input 
          type="email" 
          name="contact[email]" 
          placeholder="{{ section.settings.placeholder }}" 
          required 
          aria-label="{{ section.settings.placeholder }}">
        
        <input type="hidden" name="contact[accepts_marketing]" value="true">

        <button type="submit" style="background-color: {{ section.settings.button_color }};">
          {{ section.settings.button_text }}
        </button>

        <!-- Mensajes de éxito y error -->
        {%- if form.posted_successfully? -%}
          <p class="success-message">¡Gracias por suscribirte!</p>
        {%- endif -%}

        {%- if form.errors -%}
          <p class="error-message">{{ form.errors.messages.email }}</p>
        {%- endif -%}
      {%- endform -%}

    </div>

    <div class="subscription-image">
      {% if section.settings.right_image != blank %}
        <img src="{{ section.settings.right_image | img_url: 'large' }}" alt="Imagen derecha">
      {% endif %}
    </div>
  </div>
</div>

<style>
.subscription-section {
  background: #fefaf4;
  padding: 50px 0;
  text-align: center;
}

.subscription-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 1200px;
  margin: 0 auto;
  flex-wrap: wrap;
}

.subscription-image img {
  width: 100%;
  max-width: 300px;
  border-radius: 10px;
}

.subscription-content {
  flex: 1;
  max-width: 500px;
  text-align: center;
}

.subscription-content h2 {
  font-size: 28px;
  font-weight: bold;
}

.subscription-content p {
  font-size: 16px;
  margin-bottom: 20px;
}

.subscription-content form {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.subscription-content input {
  width: 100%;
  max-width: 300px;
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.subscription-content button {
  padding: 10px 20px;
  font-size: 16px;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.success-message {
  color: green;
  margin-top: 10px;
}

.error-message {
  color: red;
  margin-top: 10px;
}
</style>
