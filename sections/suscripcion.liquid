{% schema %}
{
  "name": "Suscripción",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Imagen izquierda"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Imagen derecha"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "¡SUSCRÍBETE Y RECIBE UN 10% OFF!"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Disfruta de promociones, acceso preferencial a nuevos productos, noticias y mucho más."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Texto del campo de correo",
      "default": "Correo electrónico"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Suscribirme"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Color del botón",
      "default": "#A02D76"
    }
  ],
  "presets": [
    {
      "name": "Suscripción",
      "category": "Marketing"
    }
  ]
}
{% endschema %}

<div class="t4s-section-inner t4s_nt_se_footer t4s_se_footer t4s-container-wrap" style="--bg-color: #f6f6f8;--pd-top: 75px;--pd-bottom: 75px;">
  <div class="t4s-container">
    <div class="t4s-footer-wrap t4s-row is--footer-sticky-false is--footer-collapse-true">

      <div class="t4s-custom-col t4s-col-border-none t4s-col-item t4s-col-lg-3 t4s-col-md-6 t4s-col-12">
        <div class="t4s-col-inner t4s-text-md-start t4s-text-start">
          <h3 class="t4s-col-heading">Newsletter Signup</h3>
          <p class="t4s-text-bl">Suscríbete a nuestro boletín y obtén un 10% de descuento en tu primera compra.</p>

          {%- form 'customer', id: 't4s-form-footer', class: 't4s-newsletter__form' -%}
            <input type="email"
              id="newsletter-email"
              name="contact[email]"
              placeholder="{{ section.settings.placeholder }}"
              required
              aria-label="{{ section.settings.placeholder }}"
              class="t4s-newsletter__email">

            <input type="hidden" name="contact[accepts_marketing]" value="true">

            <button type="submit" class="t4s-newsletter__submit" style="background-color: {{ section.settings.button_color }};">
              {{ section.settings.button_text }}
            </button>

            <!-- Mensajes de éxito y error -->
            {%- if form.posted_successfully? -%}
              <p class="success-message">¡Gracias por suscribirte!</p>
            {%- endif -%}

            {%- if form.errors -%}
              <p class="error-message">{{ form.errors.translated_fields.email | capitalize }}: {{ form.errors.messages.email }}</p>
            {%- endif -%}
          {%- endform -%}

        </div>
      </div>

    </div>
  </div>
</div>

<style>
/* Estilos del contenedor */
.t4s-section-inner {
  background: #f6f6f8;
  padding: 75px 0;
}

/* Contenedor de la suscripción */
.t4s-col-inner {
  text-align: center;
  max-width: 500px;
  margin: 0 auto;
}

