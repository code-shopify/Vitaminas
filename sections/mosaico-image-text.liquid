<div class="{{ section.settings.custom-class }} t4s-container vitatu-section py-5 text-center">
  <h2 class="mb-4">{{ section.settings.heading }}</h2>
  <p class="mb-5">{{ section.settings.subheading }}</p>

  <div class="section-conteiner row align-items-center">
    <!-- Imagen principal -->
    <div class="col-md-6 mb-4 mb-md-0">
      <img src="{{ section.settings.main_image | image_url }}" alt="Producto Vitatú" class="img-fluid rounded">
    </div>

    <!-- Características -->
    <div class="col-md-6">
      <div class="d-flex flex-column gap-3">
        
        <div class="d-flex align-items-center">
          <img src="{{ section.settings.feature_image_1 | image_url }}" alt="{{ section.settings.feature_title_1 }}" class="img-thumbnail me-3 feature-img">
          <div class="conteiner-text text-center">
            <h3 class="fs-2 text-decoration-underline">{{ section.settings.feature_title_1 }}</h3>
            <p class="text--section mb-0">{{ section.settings.feature_description_1 }}</p>
          </div>
        </div>

        <hr style="width: 100%; max-width: 100%; color: #DCDCDC;">
        
        <div class="d-flex align-items-center">
          <img src="{{ section.settings.feature_image_2 | image_url }}" alt="{{ section.settings.feature_title_2 }}" class="img-thumbnail me-3 feature-img">
          <div class="conteiner-text text-center">
            <h3 class="fs-2 text-decoration-underline">{{ section.settings.feature_title_2 }}</h3>
            <p class="text--section mb-0">{{ section.settings.feature_description_2 }}</p>
          </div>
        </div>

        <hr style="width: 100%; max-width: 100%; color: #DCDCDC;">

        <div class="d-flex align-items-center">
          <img src="{{ section.settings.feature_image_3 | image_url }}" alt="{{ section.settings.feature_title_3 }}" class="img-thumbnail me-3 feature-img">
          <div class="conteiner-text text-center">
            <h3 class="fs-2 text-decoration-underline">{{ section.settings.feature_title_3 }}</h3>
            <p class="text--section mb-0">{{ section.settings.feature_description_3 }}</p>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

{% style %}
/*---------------- Global Custom CSS -------------------*/
.feature-img {
  width: 50%;
  height: 125px;
  object-fit: cover;
  border-radius: 8px;
  border: none;
  background-color: transparent;
}

.vitatu-section {
  background-color: #fff;
  font-family: Arial, sans-serif;
}

.vitatu-section h2 {
  font-size: 28px;
}

.vitatu-section p {
  color: black;
  font-size: 14px;
}

.text-start {
  text-align: center !important;
  width: 50%;
}
.text--section {
    max-width: 79%;
    font-size: 1.7rem !important;
    color: #3F3F3F !important;
    line-height: 1.3;
}
  .conteiner-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
}
.section-conteiner {
    width: 100%;
}
/*---------------- Custom CSS for only desktop -------------------*/
@media (min-width: 1025px) {.mosaico-movil{display:none;}}

/*---------------- Custom CSS for tablet, mobile -------------------*/
@media (max-width: 1024px) {}

/*---------------- Custom CSS for only tablet -------------------*/
@media (min-width: 768px) and (max-width: 1024px) {.mosaico-movil{display:none;}.conteiner-text { width: 50%;}
                                                   .col-md-6.mb-4.mb-md-0 {display: none;} .col-md-6 {
    width: 100%;
}
                                                  }

/*---------------- Custom CSS for only mobile -------------------*/
@media (max-width: 768px) {.col-md-6.mb-4.mb-md-0 {
    display: none;
}
.mosaico-desktop{display:none;}
.text--section {
    font-size: 1.2rem !important;
    max-width: 91%;
}
.conteiner-text {
    gap: 2.4rem !important;
}
}
{% endstyle %}

