    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Imagen principal"
    },
    {
      "type": "image_picker",
      "id": "feature_image_1",
      "label": "Imagen de Pago Seguro"
    },
    {
      "type": "text",
      "id": "feature_title_1",
      "label": "Título de Pago Seguro",
      "default": "Pago seguro"
    },
    {
      "type": "text",
      "id": "feature_description_1",
      "label": "Descripción de Pago Seguro",
      "default": "Tu información de pago se procesa de manera segura. Aceptamos diferentes métodos de pago."
    },
    {
      "type": "image_picker",
      "id": "feature_image_2",
      "label": "Imagen de Ayuda"
    },
    {
      "type": "text",
      "id": "feature_title_2",
      "label": "Título de Ayuda",
      "default": "Estamos para ayudarte"
    },
    {
      "type": "text",
      "id": "feature_description_2",
      "label": "Descripción de Ayuda",
      "default": "Nuestro compromiso es acompañarte en cada paso. Eres nuestra prioridad."
    },
    {
      "type": "image_picker",
      "id": "feature_image_3",
      "label": "Imagen de Suscripción"
    },
    {
      "type": "text",
      "id": "feature_title_3",
      "label": "Título de Suscripción",
      "default": "Suscríbete a Vitatú"
    },
    {
      "type": "text",
      "id": "feature_description_3",
      "label": "Descripción de Suscripción",
      "default": "Recibe tips exclusivos, ofertas especiales y las últimas novedades al formar parte."
    }
  ],
  "presets": [
    {
      "name": "Descubre Vitatú",
      "category": "Secciones Personalizadas"
    }
  ]
}
{% endschema %}
