{% schema %}
{
  "name": "Sección Descubre Vitatú",
  "settings": [
    {
      "type": "text",
      "id": "custom-class",
      "label": "Clase Personalizada (no borrar)",
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título principal",
      "default": "DESCUBRE VITATÚ"
