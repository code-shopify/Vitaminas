<!-- Estructura de ejemplo para que el icono aparezca sobre un círculo verde y el texto a la derecha -->
<div class="icon-circle-text">
  <!-- Contenedor del ícono con el círculo -->
  <div class="icon-wrapper">
    <!-- Círculo de fondo -->
    <span class="icon-bg-circle"></span>
    <!-- Imagen del ícono -->
    <img src="{{ 'tu-icono.png' | asset_url }}" alt="Ejemplo de icono" />
    <!-- (Opcional) Estrellita arriba del ícono -->
    <!-- <span class="icon-star"></span> -->
  </div>

  <!-- Texto al lado derecho -->
  <h2 class="icon-title">Inositol de Origen Español</h2>
</div>

{% style %}
/* Contenedor principal en fila */
.icon-circle-text {
  display: flex;
  align-items: center;
  gap: 10px; /* Espacio entre ícono y texto */
  padding: 10px 0; /* Margen vertical */
  /* Si deseas un color de fondo para todo el bloque, descomenta:
  background-color: #fef8ed; 
  */
}

/* Contenedor relativo del ícono */
.icon-wrapper {
  position: relative;
  width: 50px;  /* Ajusta a tu gusto */
  height: 50px; /* Ajusta a tu gusto */
}

/* Círculo verde de fondo */
.icon-bg-circle {
  position: absolute;
  top: 0;
  left: 0;
  width: 50px;  /* Debe coincidir con el contenedor */
  height: 50px; /* Debe coincidir con el contenedor */
  background-color: #cde8b3; /* Ajusta el color del círculo */
  border-radius: 50%;
  z-index: 0; /* Detrás del ícono */
}

/* Imagen del ícono */
.icon-wrapper img {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 25px;  /* Ajusta el tamaño del ícono */
  height: auto;
  transform: translate(-50%, -50%); /* Centra la imagen */
  z-index: 1;
}

/* (Opcional) Estrellita encima del ícono, si la quieres */
.icon-star {
  position: absolute;
  top: -5px;  /* Ajusta posición */
  right: -5px; /* Ajusta posición */
  width: 12px;
  height: 12px;
  background: url("{{ 'estrella.png' | asset_url }}") no-repeat center / contain;
  z-index: 2;
}

/* Texto a la derecha del ícono */
.icon-title {
  font-size: 20px; /* Ajusta tamaño de texto */
  font-weight: 700;
  margin: 0;
  color: #000; /* Ajusta color */
}
{% endstyle %}


