<div class="page-head t4s-pr t4s-oh page_bg_img">
  <div class="t4s-container t4s-pr t4s-z-100">

    <nav class="breadcrumbs" role="navigation" aria-label="breadcrumbs">
      <ul class="breadcrumbs__list">
        <li class="breadcrumbs__item">
          <a href="{{ routes.root_url }}" class="t4s-dib">{{ 'general.breadcrumb.home' | t }}</a>
          <svg class="t4s-icon-arrow" viewBox="0 0 100 100">
            <path d="M 10,50 L 60,100 L 70,90 L 30,50 L 70,10 L 60,0 Z" transform="translate(100, 100) rotate(180)" />
          </svg>
        </li>
        {%- if current_tags -%}
          <li class="breadcrumbs__item">
            {{ collection.title | link_to: collection.url }}
            <svg class="t4s-icon-arrow" viewBox="0 0 100 100">
              <path d="M 10,50 L 60,100 L 70,90 L 30,50 L 70,10 L 60,0 Z" transform="translate(100, 100) rotate(180)" />
            </svg>
          </li>
          <li class="breadcrumbs__item" aria-current="page">{{ current_tags | join: ", " }}</li>
        {%- else -%}
          <li class="breadcrumbs__item" aria-current="page">{{ collection.title }}</li>
        {%- endif -%}
      </ul>
    </nav>

    <p class="best-sellers-subtitle">+100,000 satisfacciones con su compra</p>
    <h1 class="best-sellers-title">BEST SELLERS</h1>
    <p class="best-sellers-desc">Calidad en cada ingrediente, diseñados pensando en ti</p>

    <div class="best-sellers-icons">
      <div class="icon-box">
        <img src="{{ 'Capa_1.png' | asset_url }}"  alt="Formulado por especialistas en nutrición">
        <p>Formulado por especialistas en nutrición</p>
      </div>
      <div class="icon-box">
        <img src="{{ 'icon-integridad.png' | asset_url }}" alt="Integridad en nuestra fórmula">
        <p>Integridad en nuestra fórmula</p>
      </div>
      <div class="icon-box">
        <img src="{{ 'icon-origen.png' | asset_url }}" alt="Hecho en Origen Español">
        <p>Hecho en Origen Español</p>
      </div>
      <div class="icon-box">
        <img src="{{ 'icon-seguimiento.png' | asset_url }}" alt="Seguimiento y acompañamiento post compra">
        <p>Seguimiento y acompañamiento post compra</p>
      </div>
    </div>
  </div>
</div>

{% style %}
.best-sellers-subtitle {
  text-align: center;
  font-size: 14px;
  color: #555;
  margin: 0 0 5px;
}
.best-sellers-title {
  text-align: center;
  font-size: 32px;
  font-weight: 700;
  margin: 0 0 10px;
}
.best-sellers-desc {
  text-align: center;
  font-size: 16px;
  color: #555;
  margin: 0 0 20px;
}
.best-sellers-icons {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
  gap: 20px;
  max-width: 1200px;
  margin: 0 auto;
}
.icon-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200px;
  text-align: center;
}
.icon-box img {
  max-width: 60px;
  margin-bottom: 10px;
}
.icon-box p {
  margin: 0;
  font-size: 14px;
  color: #444;
  line-height: 1.4em;
}
.breadcrumbs {
  margin: 20px auto 0;
  text-align: center;
}
.breadcrumbs__list {
  list-style: none;
  padding: 0;
  display: inline-flex;
  align-items: center;
}
.breadcrumbs__item {
  margin: 0 5px;
}
.breadcrumbs__item a {
  text-decoration: none;
  color: #444;
}
.t4s-icon-arrow {
  width: 10px;
  height: 10px;
  margin-left: 5px;
}
{% endstyle %}
